            </svg>
            <span>Locataire: En attente de signature</span>
          </div>
        </div>

        <div class="flex gap-2 mt-4">
          <%= link_to owner_lease_path(id: 2), class: "btn-secondary flex-1 text-center text-sm" do %>
            Voir détails
          <% end %>
          <%= link_to preview_owner_lease_path(id: 2), class: "btn-primary flex-1 text-center text-sm" do %>
            Prévisualiser
          <% end %>
        </div>
      </div>

      <!-- Lease Card 3 - Pending Signatures -->
      <div class="card-olak hover:shadow-lg transition-shadow">
        <div class="flex justify-between items-start mb-4">
          <div>
            <h3 class="font-bold text-xl text-olak-primary-dark mb-1">Chambre meublée</h3>
            <p class="text-sm text-gray-600">Marseille</p>
          </div>
          <span class="badge badge-zone-tendue">En attente</span>
        </div>
        
        <div class="space-y-2 mb-4 text-sm">
