      <!-- Lease Card 1 - Both Signed -->
      <div class="card-olak hover:shadow-lg transition-shadow">
        <div class="flex justify-between items-start mb-4">
          <div>
            <h3 class="font-bold text-xl text-olak-primary-dark mb-1">Appartement T3</h3>
            <p class="text-sm text-gray-600">Paris 15ème</p>
          </div>
          <span class="badge badge-success">Finalisé</span>
        </div>
        
        <div class="space-y-2 mb-4 text-sm">
