<% content_for :title, "Mon Profil" %>

<!-- Page Header -->
<div class="mb-8">
  <div class="flex justify-between items-center">
    <div>
      <h1 class="text-4xl font-bold text-olak-primary-dark mb-2">Mon Profil</h1>
      <p class="text-gray-600">Gérez vos informations personnelles et documents</p>
    </div>
    <%= link_to edit_owner_profile_path, class: "btn-primary flex items-center gap-2" do %>
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
        <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"/>
      </svg>
      Modifier mon profil
    <% end %>
  </div>
</div>

<!-- Validation Status Alert -->
<div class="mb-6">
  <div class="bg-green-50 border-l-4 border-green-500 p-4 rounded-r-lg">
    <div class="flex items-center">
      <svg class="w-6 h-6 text-green-500 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
      </svg>
      <div>
        <p class="text-green-800 font-semibold">Profil validé</p>
        <p class="text-green-700 text-sm mt-1">Votre compte propriétaire est actif et validé par l'administration.</p>
      </div>
    </div>
  </div>
</div>

<!-- Profile Information Card -->
<div class="card-olak mb-6">
  <div class="flex justify-between items-start mb-6">
    <h2 class="text-2xl font-semibold text-olak-primary-dark">Informations personnelles</h2>
    <span class="badge badge-success">Validé</span>
  </div>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <p class="text-sm font-semibold text-gray-600 mb-1">Nom complet</p>
      <p class="text-base text-olak-dark">Jean Dupont</p>
    </div>
    
    <div>
      <p class="text-sm font-semibold text-gray-600 mb-1">Email</p>
      <p class="text-base text-olak-dark">jean.dupont@example.fr</p>
    </div>
    
    <div>
      <p class="text-sm font-semibold text-gray-600 mb-1">Téléphone</p>
      <p class="text-base text-olak-dark">06 12 34 56 78</p>
    </div>
    
    <div>
      <p class="text-sm font-semibold text-gray-600 mb-1">Date de naissance</p>
      <p class="text-base text-olak-dark">15/03/1975</p>
    </div>
    
    <div class="md:col-span-2">
      <p class="text-sm font-semibold text-gray-600 mb-1">Adresse</p>
      <p class="text-base text-olak-dark">123 Rue de la Paix, 75002 Paris, France</p>
    </div>
    
    <div>
      <p class="text-sm font-semibold text-gray-600 mb-1">Type de propriétaire</p>
      <p class="text-base text-olak-dark">Personne physique</p>
    </div>
    
    <div>
      <p class="text-sm font-semibold text-gray-600 mb-1">Compte créé le</p>
      <p class="text-base text-olak-dark">12 janvier 2024</p>
    </div>
  </div>
</div>

