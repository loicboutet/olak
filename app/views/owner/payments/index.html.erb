<% content_for :title, "Historique des paiements" %>

<div class="min-h-screen bg-olak-gray py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-5xl font-bold text-olak-primary-dark leading-tight mb-4">Mes Paiements</h1>
      <p class="text-lg text-gray-600">Consultez l'historique de vos paiements et factures</p>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-xl shadow-md p-6 mb-6">
      <h3 class="text-lg font-semibold text-olak-dark mb-4">Filtrer par statut</h3>
      <div class="flex flex-wrap gap-3">
        <button class="btn-primary px-4 py-2 text-sm">Tous les paiements</button>
        <button class="btn-secondary px-4 py-2 text-sm">En attente</button>
        <button class="btn-secondary px-4 py-2 text-sm">Complétés</button>
        <button class="btn-secondary px-4 py-2 text-sm">Échoués</button>
      </div>
    </div>

    <!-- Payments Table -->
    <div class="bg-white rounded-xl shadow-md overflow-hidden">
