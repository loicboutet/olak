<% content_for :title, "Facture INV-2024-001 - OLAK" %>

<div class="min-h-screen bg-olak-gray py-8">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-4xl font-bold text-olak-primary-dark">Facture INV-2024-001</h1>
          <p class="text-gray-600 mt-2">Détails de la facture</p>
        </div>
        <div class="flex gap-3">
          <%= link_to mockups_owner_invoices_list_path, class: "btn-secondary" do %>
            <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            Retour à la liste
          <% end %>
          <%= link_to "#", class: "btn-primary" do %>
            <svg class="w-5 h-5 inline mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd"/>
            </svg>
            Télécharger PDF
          <% end %>
        </div>
      </div>
    </div>

    <!-- Status Alert -->
    <div class="mb-6">
      <div class="bg-green-50 border-l-4 border-green-500 p-4 rounded-r-lg">
        <div class="flex items-center">
          <svg class="w-6 h-6 text-green-500 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <div>
            <p class="text-green-800 font-semibold">Facture payée</p>
            <p class="text-green-700 text-sm mt-1">Cette facture a été payée le 15 novembre 2024</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Invoice Details Card -->
    <div class="card-olak mb-6">
      <div class="border-b border-gray-200 pb-6 mb-6">
        <div class="flex items-center justify-between">
          <div>
            <h2 class="text-2xl font-bold text-olak-primary-dark mb-2">INV-2024-001</h2>
            <span class="badge badge-success">Payée</span>
          </div>
          <div class="text-right">
            <p class="text-sm text-gray-600">Date d'émission</p>
            <p class="text-lg font-semibold text-olak-dark">15 novembre 2024</p>
          </div>
        </div>
      </div>

      <!-- Invoice Information Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
        <!-- Issuer Information -->
        <div>
          <h3 class="text-lg font-semibold text-olak-dark mb-4">Émetteur</h3>
          <div class="bg-olak-gray p-4 rounded-lg">
            <p class="font-bold text-olak-dark">OLAK</p>
            <p class="text-sm text-gray-600 mt-2">123 Avenue des Champs-Élysées</p>
            <p class="text-sm text-gray-600">75008 Paris, France</p>
            <p class="text-sm text-gray-600 mt-2">SIRET: 123 456 789 00012</p>
            <p class="text-sm text-gray-600">TVA: FR12345678901</p>
          </div>
        </div>

        <!-- Customer Information -->
        <div>
          <h3 class="text-lg font-semibold text-olak-dark mb-4">Destinataire</h3>
          <div class="bg-olak-gray p-4 rounded-lg">
            <p class="font-bold text-olak-dark">Jean Dupont</p>
            <p class="text-sm text-gray-600 mt-2">45 Rue de la République</p>
            <p class="text-sm text-gray-600">75002 Paris, France</p>
            <p class="text-sm text-gray-600 mt-2">Email: jean.dupont@example.com</p>
            <p class="text-sm text-gray-600">Tél: 06 12 34 56 78</p>
          </div>
        </div>
      </div>

      <!-- Property Information -->
      <div class="mb-6">
        <h3 class="text-lg font-semibold text-olak-dark mb-4">Bien concerné</h3>
        <div class="bg-olak-gray p-4 rounded-lg">
          <div class="flex items-start justify-between">
            <div>
              <p class="font-bold text-olak-dark">Appartement T3</p>
              <p class="text-sm text-gray-600 mt-1">75 m² • 2 chambres</p>
              <p class="text-sm text-gray-600">123 Rue de la Paix, 75015 Paris</p>
            </div>
            <span class="badge badge-furnished">Meublé</span>
          </div>
        </div>
      </div>

      <!-- Invoice Items -->
      <div class="mb-6">
        <h3 class="text-lg font-semibold text-olak-dark mb-4">Détail de la facturation</h3>
        <div class="overflow-x-auto">
          <table class="min-w-full bg-white border border-gray-200 rounded-lg">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Description</th>
                <th class="px-6 py-3 text-right text-sm font-semibold text-gray-700">Montant HT</th>
                <th class="px-6 py-3 text-right text-sm font-semibold text-gray-700">TVA</th>
                <th class="px-6 py-3 text-right text-sm font-semibold text-gray-700">Montant TTC</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <tr>
                <td class="px-6 py-4 text-sm text-olak-dark">
                  <p class="font-medium">Frais de service OLAK</p>
                  <p class="text-xs text-gray-500 mt-1">Signature du bail - Appartement T3</p>
                </td>
                <td class="px-6 py-4 text-sm text-right text-olak-dark">375,00 €</td>
                <td class="px-6 py-4 text-sm text-right text-olak-dark">75,00 € (20%)</td>
                <td class="px-6 py-4 text-sm text-right font-semibold text-olak-primary">450,00 €</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Total -->
      <div class="border-t border-gray-200 pt-6">
        <div class="flex justify-end">
          <div class="w-full md:w-1/2">
            <div class="space-y-2">
              <div class="flex justify-between text-sm">
                <span class="text-gray-600">Sous-total HT:</span>
                <span class="font-semibold text-olak-dark">375,00 €</span>
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-gray-600">TVA (20%):</span>
                <span class="font-semibold text-olak-dark">75,00 €</span>
              </div>
              <div class="border-t border-gray-300 pt-2 mt-2">
                <div class="flex justify-between">
                  <span class="text-lg font-bold text-olak-dark">Total TTC:</span>
                  <span class="text-2xl font-bold text-olak-primary">450,00 €</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Payment Information -->
    <div class="card-olak mb-6">
      <h3 class="text-lg font-semibold text-olak-dark mb-4">Informations de paiement</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <p class="text-sm text-gray-600 mb-1">Méthode de paiement</p>
          <div class="flex items-center">
            <svg class="w-6 h-6 mr-2 text-olak-primary" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20 4H4c-1.11 0-1.99.89-1.99 2L2 18c0 1.11.89 2 2 2h16c1.11 0 2-.89 2-2V6c0-1.11-.89-2-2-2zm0 14H4v-6h16v6zm0-10H4V6h16v2z"/>
            </svg>
            <span class="font-semibold text-olak-dark">Carte bancaire •••• 1234</span>
          </div>
        </div>
        <div>
          <p class="text-sm text-gray-600 mb-1">Date de paiement</p>
          <p class="font-semibold text-olak-dark">15 novembre 2024 à 14:32</p>
        </div>
        <div>
          <p class="text-sm text-gray-600 mb-1">ID de transaction</p>
          <p class="font-mono text-sm text-olak-dark">TXN-2024-11-15-001234</p>
        </div>
        <div>
          <p class="text-sm text-gray-600 mb-1">Zone tarifaire</p>
          <p class="font-semibold text-olak-dark">Paris (Zone tendue)</p>
        </div>
      </div>
    </div>

    <!-- Legal Notice -->
    <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
      <p class="text-xs text-gray-600">
        <strong class="text-gray-700">Mentions légales:</strong> 
        Cette facture est émise par OLAK, SAS au capital de 10 000€, immatriculée au RCS de Paris sous le numéro 123 456 789.
        Siège social: 123 Avenue des Champs-Élysées, 75008 Paris. TVA intracommunautaire: FR12345678901.
        En cas de retard de paiement, une pénalité égale à trois fois le taux d'intérêt légal sera appliquée.
      </p>
    </div>

    <!-- Action Buttons -->
    <div class="mt-8 flex gap-4 justify-center">
      <%= link_to "#", class: "btn-primary px-8" do %>
        <svg class="w-5 h-5 inline mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd"/>
        </svg>
        Télécharger la facture
      <% end %>
      <%= link_to mockups_owner_invoices_list_path, class: "btn-secondary px-8" do %>
        Retour à mes factures
      <% end %>
    </div>

  </div>
</div>
