<% content_for :title, "Détails du paiement" %>

<div class="min-h-screen bg-olak-gray py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Header -->
    <div class="mb-6">
      <%= link_to owner_payments_path, class: "text-olak-primary hover:text-olak-primary-dark font-semibold flex items-center gap-2" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Retour aux paiements
      <% end %>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        
        <!-- Payment Header -->
        <div class="bg-white rounded-xl shadow-md p-8">
          <div class="flex items-start justify-between mb-6">
            <div>
              <h1 class="text-4xl font-bold text-olak-primary-dark mb-2">Paiement #<%= params[:id] || '1' %></h1>
              <p class="text-lg text-gray-700">Frais de service OLAK</p>
              <p class="text-sm text-gray-600 mt-1">Effectué le 15 novembre 2024 à 14:30</p>
            </div>
            <span class="badge badge-success text-lg px-4 py-2">Complété</span>
          </div>
          
          <!-- Amount Card -->
          <div class="bg-olak-gray p-6 rounded-lg">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm text-gray-600 mb-1">Montant payé</p>
                <p class="text-4xl font-bold text-olak-primary">150 €</p>
              </div>
              <svg class="w-16 h-16 text-olak-success" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
            </div>
          </div>
        </div>

        <!-- Lease Information -->
        <div class="bg-white rounded-xl shadow-md p-8">
          <h2 class="text-2xl font-semibold text-olak-dark mb-6">Bail associé</h2>
          <dl class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
            <div>
              <dt class="text-gray-600 mb-1">Bien</dt>
              <dd class="font-medium text-olak-dark">Appartement T3</dd>
            </div>
            <div>
              <dt class="text-gray-600 mb-1">Adresse</dt>
              <dd class="font-medium text-olak-dark">Paris 15ème</dd>
            </div>
            <div>
              <dt class="text-gray-600 mb-1">Locataire</dt>
              <dd class="font-medium text-olak-dark">Marie Dupont</dd>
            </div>
            <div>
              <dt class="text-gray-600 mb-1">Date de début</dt>
              <dd class="font-medium text-olak-dark">01 décembre 2024</dd>
            </div>
            <div>
              <dt class="text-gray-600 mb-1">Loyer mensuel</dt>
              <dd class="font-medium text-olak-dark">1 200 €</dd>
            </div>
            <div>
              <dt class="text-gray-600 mb-1">Type de location</dt>
              <dd><span class="badge badge-furnished">Meublé</span></dd>
            </div>
          </dl>
          
          <div class="mt-6 pt-6 border-t">
            <%= link_to mockups_owner_lease_show_path, class: "btn-secondary inline-flex items-center gap-2" do %>
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
                <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
              </svg>
              Voir le bail
            <% end %>
          </div>
        </div>

        <!-- Transaction Details -->
        <div class="bg-white rounded-xl shadow-md p-8">
          <h2 class="text-2xl font-semibold text-olak-dark mb-6">Détails de la transaction</h2>
          <dl class="space-y-4 text-sm">
            <div class="flex justify-between py-2 border-b border-gray-200">
              <dt class="text-gray-600">Numéro de transaction</dt>
              <dd class="font-medium text-olak-dark">TXN-2024-11-15-0001</dd>
            </div>
            <div class="flex justify-between py-2 border-b border-gray-200">
              <dt class="text-gray-600">Méthode de paiement</dt>
              <dd class="font-medium text-olak-dark flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <rect x="2" y="5" width="20" height="14" rx="2" stroke-width="2"/>
                  <path d="M2 10h20" stroke-width="2"/>
                </svg>
                Carte •••• 4242
              </dd>
            </div>
            <div class="flex justify-between py-2 border-b border-gray-200">
              <dt class="text-gray-600">Processeur de paiement</dt>
              <dd class="font-medium text-olak-dark">Stripe</dd>
            </div>
            <div class="flex justify-between py-2 border-b border-gray-200">
              <dt class="text-gray-600">ID Stripe</dt>
              <dd class="font-medium text-gray-500 font-mono text-xs">ch_3QK1aB2eZvKYlo2C0KqLZa9c</dd>
            </div>
            <div class="flex justify-between py-2 border-b border-gray-200">
              <dt class="text-gray-600">Zone tarifaire</dt>
              <dd><span class="badge badge-zone-tendue">Zone tendue</span></dd>
            </div>
            <div class="flex justify-between py-2">
              <dt class="text-gray-600">Statut</dt>
              <dd><span class="badge badge-success">Paiement réussi</span></dd>
            </div>
          </dl>
        </div>

        <!-- Pricing Breakdown -->
        <div class="bg-white rounded-xl shadow-md p-8">
          <h2 class="text-2xl font-semibold text-olak-dark mb-6">Détail du montant</h2>
          <dl class="space-y-3 text-sm">
            <div class="flex justify-between">
              <dt class="text-gray-600">Frais de service OLAK</dt>
              <dd class="font-semibold text-olak-dark">120 €</dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-gray-600">TVA (20%)</dt>
              <dd class="font-semibold text-olak-dark">30 €</dd>
            </div>
            <div class="border-t pt-3 mt-3 flex justify-between">
              <dt class="font-bold text-olak-dark text-lg">Total TTC</dt>
              <dd class="font-bold text-2xl text-olak-primary">150 €</dd>
            </div>
          </dl>
          
          <div class="mt-4 pt-4 border-t">
            <p class="text-xs text-gray-600">
              <svg class="w-4 h-4 inline text-olak-success mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              Tarif réduit appliqué pour les biens en zone tendue
            </p>
          </div>
        </div>

      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        
        <!-- Actions -->
        <div class="bg-white rounded-xl shadow-md p-6">
          <h3 class="text-xl font-semibold text-olak-dark mb-4">Actions</h3>
          
          <div class="space-y-3">
            <a href="#" class="w-full btn-primary flex items-center justify-center gap-2">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6 2a2 2 0 00-2 2v12a2 2 0 002 2h8a2 2 0 002-2V7.414A2 2 0 0015.414 6L12 2.586A2 2 0 0010.586 2H6zm5 6a1 1 0 10-2 0v3.586l-1.293-1.293a1 1 0 10-1.414 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L11 11.586V8z" clip-rule="evenodd"/>
              </svg>
              Télécharger la facture
            </a>
            
            <button class="w-full btn-secondary flex items-center justify-center gap-2">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M15 8a3 3 0 10-2.977-2.63l-4.94 2.47a3 3 0 100 4.319l4.94 2.47a3 3 0 10.895-1.789l-4.94-2.47a3.027 3.027 0 000-.74l4.94-2.47C13.456 7.68 14.19 8 15 8z"/>
              </svg>
              Partager
            </button>
          </div>
        </div>

        <!-- Payment Timeline -->
        <div class="bg-white rounded-xl shadow-md p-6">
          <h3 class="text-xl font-semibold text-olak-dark mb-4">Historique</h3>
          
          <div class="relative">
            <!-- Timeline Line -->
            <div class="absolute left-4 top-8 bottom-8 w-0.5 bg-olak-success"></div>
            
            <!-- Step 1: Payment Initiated -->
            <div class="relative flex items-start mb-6">
              <div class="flex items-center justify-center w-8 h-8 rounded-full bg-olak-success text-white font-bold flex-shrink-0 z-10">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="ml-4">
                <p class="font-semibold text-olak-dark">Paiement initié</p>
                <p class="text-sm text-gray-600">15 nov 2024, 14:28</p>
              </div>
            </div>
            
            <!-- Step 2: Payment Processing -->
            <div class="relative flex items-start mb-6">
              <div class="flex items-center justify-center w-8 h-8 rounded-full bg-olak-success text-white font-bold flex-shrink-0 z-10">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="ml-4">
                <p class="font-semibold text-olak-dark">Traitement par Stripe</p>
                <p class="text-sm text-gray-600">15 nov 2024, 14:29</p>
              </div>
            </div>
            
            <!-- Step 3: Payment Completed -->
            <div class="relative flex items-start">
              <div class="flex items-center justify-center w-8 h-8 rounded-full bg-olak-success text-white font-bold flex-shrink-0 z-10">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="ml-4">
                <p class="font-semibold text-olak-dark">Paiement confirmé</p>
                <p class="text-sm text-gray-600">15 nov 2024, 14:30</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Help -->
        <div class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded-r-lg">
          <div class="flex items-start">
            <svg class="w-6 h-6 text-blue-500 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
            </svg>
            <div>
              <p class="text-sm text-blue-800 font-semibold mb-1">Besoin d'aide ?</p>
              <p class="text-xs text-blue-700">
                Pour toute question concernant ce paiement, contactez-nous au support@olak.fr
              </p>
            </div>
          </div>
        </div>

      </div>
    </div>

  </div>
</div>