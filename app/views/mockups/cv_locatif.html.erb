<% content_for :title, "CV Locatif - OLAK" %>

<div class="min-h-screen bg-olak-gray py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Header Section -->
    <div class="bg-white rounded-xl shadow-md p-8 mb-6 text-center">
      <%= image_tag 'logo_olak.png', alt: 'OLAK', class: 'h-12 mx-auto mb-4' %>
      <h1 class="text-5xl font-bold text-olak-primary-dark mb-2">CV Locatif</h1>
      <p class="text-lg text-gray-600 mb-4">Dossier de candidature locative</p>
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-olak-gray rounded-full">
        <svg class="w-4 h-4 text-olak-primary" fill="currentColor" viewBox="0 0 20 20">
