<div class="min-h-screen bg-olak-gray py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Page Header -->
    <div class="mb-8 flex justify-between items-center">
      <div>
        <h1 class="text-4xl font-bold text-olak-primary-dark mb-2">Liste des paiements</h1>
        <p class="text-gray-600">Suivi détaillé de toutes les transactions</p>
      </div>
      <%= link_to mockups_admin_payments_export_path, class: "btn-primary flex items-center gap-2" do %>
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd"/>
        </svg>
        Exporter
      <% end %>
    </div>

    <!-- Filters Card -->
    <div class="card-olak mb-6">
      <h3 class="text-xl font-semibold text-olak-dark mb-4">Filtres</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <div>
          <label class="block text-sm font-semibold mb-2 text-olak-dark">Recherche</label>
          <input type="text" class="input-olak" placeholder="Nom propriétaire, ID...">
        </div>
        
        <div>
          <label class="block text-sm font-semibold mb-2 text-olak-dark">Statut</label>
          <select class="input-olak">
            <option value="">Tous les statuts</option>
            <option value="completed">Confirmé</option>
            <option value="pending">En attente</option>
            <option value="refunded">Remboursé</option>
          </select>
        </div>
        
        <div>
          <label class="block text-sm font-semibold mb-2 text-olak-dark">Zone</label>
          <select class="input-olak">
            <option value="">Toutes les zones</option>
            <option value="paris">Paris</option>
            <option value="lyon">Lyon</option>
            <option value="marseille">Marseille</option>
            <option value="other">Hors zone tendue</option>
          </select>
        </div>
        
        <div>
          <label class="block text-sm font-semibold mb-2 text-olak-dark">Période</label>
          <select class="input-olak">
            <option value="">Toute période</option>
            <option value="today">Aujourd'hui</option>
            <option value="week">Cette semaine</option>
            <option value="month">Ce mois</option>
            <option value="year">Cette année</option>
          </select>
        </div>
      </div>
      
      <div class="mt-4 flex gap-2">
        <button class="btn-primary px-4 py-2 text-sm">Appliquer les filtres</button>
        <button class="btn-secondary px-4 py-2 text-sm">Réinitialiser</button>
      </div>
    </div>

    <!-- Summary Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
      <div class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-olak-primary">
        <p class="text-sm text-gray-600">Total affiché</p>
        <p class="text-2xl font-bold text-olak-dark">125 paiements</p>
      </div>
      <div class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-green-500">
        <p class="text-sm text-gray-600">Montant total</p>
        <p class="text-2xl font-bold text-olak-primary">380 000 €</p>
      </div>
      <div class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-orange-500">
        <p class="text-sm text-gray-600">En attente</p>
        <p class="text-2xl font-bold text-orange-600">5 paiements</p>
      </div>
      <div class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-blue-500">
        <p class="text-sm text-gray-600">Moyenne</p>
        <p class="text-2xl font-bold text-olak-dark">3 040 €</p>
      </div>
    </div>

    <!-- Payments Table -->
    <div class="card-olak">
      <div class="overflow-x-auto">
        <table class="min-w-full bg-white rounded-lg overflow-hidden">
          <thead class="bg-olak-primary-light text-olak-dark">
            <tr>
              <th class="px-6 py-4 text-left text-sm font-semibold">ID</th>
              <th class="px-6 py-4 text-left text-sm font-semibold">Date</th>
              <th class="px-6 py-4 text-left text-sm font-semibold">Propriétaire</th>
              <th class="px-6 py-4 text-left text-sm font-semibold">Bien</th>
              <th class="px-6 py-4 text-left text-sm font-semibold">Montant</th>
              <th class="px-6 py-4 text-left text-sm font-semibold">Zone</th>
              <th class="px-6 py-4 text-left text-sm font-semibold">Statut</th>
              <th class="px-6 py-4 text-left text-sm font-semibold">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <tr class="hover:bg-olak-gray transition-colors">
              <td class="px-6 py-4 text-sm font-mono text-gray-600">PAY-001</td>
              <td class="px-6 py-4 text-sm text-olak-dark">18/11/2024 14:30</td>
              <td class="px-6 py-4 text-sm text-olak-dark">Jean Dupont</td>
              <td class="px-6 py-4 text-sm text-gray-600">45 Avenue des Champs-Élysées, 75008 Paris</td>
              <td class="px-6 py-4 text-sm font-semibold text-olak-primary">1 500 €</td>
              <td class="px-6 py-4 text-sm"><span class="badge badge-zone-tendue">Paris</span></td>
              <td class="px-6 py-4"><span class="badge badge-success">Confirmé</span></td>
              <td class="px-6 py-4 space-x-2">
                <%= link_to "Voir", mockups_admin_payments_show_path, class: "text-olak-primary hover:text-olak-primary-dark text-sm font-semibold" %>
              </td>
            </tr>

            <tr class="hover:bg-olak-gray transition-colors">
              <td class="px-6 py-4 text-sm font-mono text-gray-600">PAY-002</td>
              <td class="px-6 py-4 text-sm text-olak-dark">17/11/2024 16:45</td>
              <td class="px-6 py-4 text-sm text-olak-dark">Marie Martin</td>
              <td class="px-6 py-4 text-sm text-gray-600">12 Rue de la République, 69002 Lyon</td>
              <td class="px-6 py-4 text-sm font-semibold text-olak-primary">1 200 €</td>
              <td class="px-6 py-4 text-sm"><span class="badge badge-zone-tendue">Lyon</span></td>
              <td class="px-6 py-4"><span class="badge badge-pending">En attente</span></td>
              <td class="px-6 py-4 space-x-2">
                <%= link_to "Voir", mockups_admin_payments_show_path, class: "text-olak-primary hover:text-olak-primary-dark text-sm font-semibold" %>
              </td>
            </tr>

            <tr class="hover:bg-olak-gray transition-colors">
              <td class="px-6 py-4 text-sm font-mono text-gray-600">PAY-003</td>
              <td class="px-6 py-4 text-sm text-olak-dark">16/11/2024 10:15</td>
              <td class="px-6 py-4 text-sm text-olak-dark">Pierre Bernard</td>
              <td class="px-6 py-4 text-sm text-gray-600">8 Boulevard de la Liberté, 13001 Marseille</td>
              <td class="px-6 py-4 text-sm font-semibold text-olak-primary">800 €</td>
              <td class="px-6 py-4 text-sm"><span class="badge badge-zone-tendue">Marseille</span></td>
              <td class="px-6 py-4"><span class="badge badge-success">Confirmé</span></td>
              <td class="px-6 py-4 space-x-2">
                <%= link_to "Voir", mockups_admin_payments_show_path, class: "text-olak-primary hover:text-olak-primary-dark text-sm font-semibold" %>
              </td>
            </tr>

            <tr class="hover:bg-olak-gray transition-colors">
              <td class="px-6 py-4 text-sm font-mono text-gray-600">PAY-004</td>
              <td class="px-6 py-4 text-sm text-olak-dark">15/11/2024 09:20</td>
              <td class="px-6 py-4 text-sm text-olak-dark">Sophie Leblanc</td>
              <td class="px-6 py-4 text-sm text-gray-600">23 Rue Victor Hugo, 33000 Bordeaux</td>
              <td class="px-6 py-4 text-sm font-semibold text-olak-primary">950 €</td>
              <td class="px-6 py-4 text-sm"><span class="badge badge-unfurnished">Bordeaux</span></td>
              <td class="px-6 py-4"><span class="badge badge-success">Confirmé</span></td>
              <td class="px-6 py-4 space-x-2">
                <%= link_to "Voir", mockups_admin_payments_show_path, class: "text-olak-primary hover:text-olak-primary-dark text-sm font-semibold" %>
              </td>
            </tr>

            <tr class="hover:bg-olak-gray transition-colors">
              <td class="px-6 py-4 text-sm font-mono text-gray-600">PAY-005</td>
              <td class="px-6 py-4 text-sm text-olak-dark">14/11/2024 11:00</td>
              <td class="px-6 py-4 text-sm text-olak-dark">Thomas Petit</td>
              <td class="px-6 py-4 text-sm text-gray-600">15 Avenue de la Gare, 59000 Lille</td>
              <td class="px-6 py-4 text-sm font-semibold text-olak-primary">1 100 €</td>
              <td class="px-6 py-4 text-sm"><span class="badge badge-unfurnished">Lille</span></td>
              <td class="px-6 py-4"><span class="badge badge-pending">En attente</span></td>
              <td class="px-6 py-4 space-x-2">
                <%= link_to "Voir", mockups_admin_payments_show_path, class: "text-olak-primary hover:text-olak-primary-dark text-sm font-semibold" %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <div class="mt-6 flex items-center justify-between border-t border-gray-200 pt-4">
        <div class="text-sm text-gray-600">
          Affichage de <span class="font-semibold">1</span> à <span class="font-semibold">5</span> sur <span class="font-semibold">125</span> résultats
        </div>
        <div class="flex items-center gap-2">
          <button class="px-3 py-2 border border-gray-300 rounded hover:bg-olak-gray transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
          </button>
          <button class="px-4 py-2 bg-olak-primary text-white rounded font-semibold">1</button>
          <button class="px-4 py-2 border border-gray-300 rounded hover:bg-olak-gray transition-colors">2</button>
          <button class="px-4 py-2 border border-gray-300 rounded hover:bg-olak-gray transition-colors">3</button>
          <span class="px-2">...</span>
          <button class="px-4 py-2 border border-gray-300 rounded hover:bg-olak-gray transition-colors">25</button>
          <button class="px-3 py-2 border border-gray-300 rounded hover:bg-olak-gray transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Back to Dashboard -->
    <div class="mt-8">
      <%= link_to mockups_admin_payments_dashboard_path, class: "btn-secondary" do %>
        ← Retour au tableau de bord
      <% end %>
    </div>

  </div>
</div>
