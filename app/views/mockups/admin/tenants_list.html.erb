<% content_for :title, "Gestion des Locataires - OLAK Admin" %>

<div class="space-y-6">
  <!-- Page Header -->
  <div class="flex justify-between items-center">
    <div>
      <h1 class="text-3xl font-bold text-olak-primary-dark">Gestion des Locataires</h1>
      <p class="text-gray-600 mt-2">Gérez les profils locataires et validez leurs documents</p>
    </div>
  </div>

  <!-- Filter Tabs -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="flex flex-wrap gap-2 mb-6">
      <button class="px-4 py-2 rounded-lg font-semibold bg-purple-600 text-white transition-colors">
        Tous (45)
      </button>
      <button class="px-4 py-2 rounded-lg font-semibold text-gray-700 bg-gray-100 hover:bg-purple-50 hover:text-purple-700 transition-colors">
        En attente (12)
      </button>
      <button class="px-4 py-2 rounded-lg font-semibold text-gray-700 bg-gray-100 hover:bg-purple-50 hover:text-purple-700 transition-colors">
        Validés (28)
      </button>
      <button class="px-4 py-2 rounded-lg font-semibold text-gray-700 bg-gray-100 hover:bg-purple-50 hover:text-purple-700 transition-colors">
        Refusés (5)
      </button>
    </div>

    <!-- Search Bar -->
    <div class="relative">
      <svg class="absolute left-4 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
      </svg>
      <input type="text" placeholder="Rechercher par nom, email ou téléphone..." class="w-full pl-12 pr-4 py-3 border-2 border-gray-200 rounded-lg text-base transition-all duration-300 focus:outline-none focus:border-purple-600 focus:ring-4 focus:ring-purple-600/10">
    </div>
  </div>

  <!-- Tenants Table -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-purple-50">
          <tr>
            <th class="px-6 py-4 text-left text-xs font-semibold text-purple-900 uppercase tracking-wider">
              Locataire
            </th>
            <th class="px-6 py-4 text-left text-xs font-semibold text-purple-900 uppercase tracking-wider">
              Contact
            </th>
            <th class="px-6 py-4 text-left text-xs font-semibold text-purple-900 uppercase tracking-wider">
              Documents
            </th>
            <th class="px-6 py-4 text-left text-xs font-semibold text-purple-900 uppercase tracking-wider">
              Candidatures
            </th>
            <th class="px-6 py-4 text-left text-xs font-semibold text-purple-900 uppercase tracking-wider">
              Statut
            </th>
            <th class="px-6 py-4 text-left text-xs font-semibold text-purple-900 uppercase tracking-wider">
              Inscription
            </th>
            <th class="px-6 py-4 text-right text-xs font-semibold text-purple-900 uppercase tracking-wider">
              Actions
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <!-- Validated Tenant -->
          <tr class="hover:bg-purple-50 transition-colors">
            <td class="px-6 py-4">
              <div class="flex items-center">
                <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center mr-3">
                  <span class="text-purple-700 font-semibold text-sm">SD</span>
                </div>
                <div>
                  <p class="font-semibold text-gray-900">Sophie Dubois</p>
                  <p class="text-sm text-gray-500">CDI - Tech Solutions</p>
                </div>
              </div>
            </td>
            <td class="px-6 py-4">
              <p class="text-sm text-gray-900">sophie.dubois@example.fr</p>
              <p class="text-sm text-gray-500">06 45 67 89 12</p>
            </td>
            <td class="px-6 py-4">
              <span class="px-3 py-1.5 rounded-full text-sm font-semibold bg-green-100 text-green-800">
                Complet
              </span>
            </td>
            <td class="px-6 py-4">
              <span class="text-sm font-semibold text-gray-900">3 candidatures</span>
            </td>
            <td class="px-6 py-4">
              <span class="px-3 py-1.5 rounded-full text-sm font-semibold bg-green-100 text-green-800">
                Validé
              </span>
            </td>
            <td class="px-6 py-4 text-sm text-gray-500">
              10 Jan 2024
            </td>
            <td class="px-6 py-4 text-right">
              <%= link_to mockups_admin_tenant_detail_path, class: "inline-flex items-center px-3 py-1.5 text-sm font-semibold text-purple-700 bg-purple-100 rounded-lg hover:bg-purple-200 transition-colors" do %>
                Voir
              <% end %>
            </td>
          </tr>

          <!-- Pending Tenant -->
          <tr class="hover:bg-purple-50 transition-colors">
            <td class="px-6 py-4">
              <div class="flex items-center">
                <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center mr-3">
                  <span class="text-purple-700 font-semibold text-sm">MM</span>
                </div>
                <div>
                  <p class="font-semibold text-gray-900">Marie Martin</p>
                  <p class="text-sm text-gray-500">CDD - Retail France</p>
