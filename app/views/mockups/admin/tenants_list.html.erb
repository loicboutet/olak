              <% end %>
              <%= link_to "#", method: :patch, class: "inline-flex items-center px-3 py-1.5 text-sm font-semibold text-green-700 bg-green-100 rounded-lg hover:bg-green-200 transition-colors" do %>
                Valider
              <% end %>
            </td>
          </tr>

          <!-- Validated Tenant -->
          <tr class="hover:bg-purple-50 transition-colors">
            <td class="px-6 py-4">
              <div class="flex items-center">
                <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center mr-3">
                  <span class="text-purple-700 font-semibold text-sm">LP</span>
                </div>
                <div>
                  <p class="font-semibold text-gray-900">Lucas Petit</p>
                  <p class="text-sm text-gray-500">CDI - Consulting Group</p>
                </div>
              </div>
            </td>
            <td class="px-6 py-4">
              <p class="text-sm text-gray-900">lucas.petit@example.fr</p>
              <p class="text-sm text-gray-500">07 11 22 33 44</p>
            </td>
            <td class="px-6 py-4">
              <span class="px-3 py-1.5 rounded-full text-sm font-semibold bg-green-100 text-green-800">
                Complet
              </span>
            </td>
            <td class="px-6 py-4">
              <span class="text-sm font-semibold text-gray-900">5 candidatures</span>
            </td>
            <td class="px-6 py-4">
              <span class="px-3 py-1.5 rounded-full text-sm font-semibold bg-green-100 text-green-800">
                Validé
              </span>
            </td>
            <td class="px-6 py-4 text-sm text-gray-500">
              15 Déc 2023
            </td>
            <td class="px-6 py-4 text-right">
              <%= link_to mockups_admin_tenant_detail_path, class: "inline-flex items-center px-3 py-1.5 text-sm font-semibold text-purple-700 bg-purple-100 rounded-lg hover:bg-purple-200 transition-colors" do %>
                Voir
              <% end %>
            </td>
          </tr>

          <!-- Pending Tenant with Guarantor -->
          <tr class="hover:bg-purple-50 transition-colors">
            <td class="px-6 py-4">
              <div class="flex items-center">
                <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center mr-3">
                  <span class="text-purple-700 font-semibold text-sm">AL</span>
                </div>
                <div>
                  <p class="font-semibold text-gray-900">Alice Leroy</p>
                  <p class="text-sm text-gray-500">Stage - Design Studio</p>
                </div>
              </div>
            </td>
            <td class="px-6 py-4">
              <p class="text-sm text-gray-900">alice.leroy@example.fr</p>
              <p class="text-sm text-gray-500">06 55 66 77 88</p>
            </td>
            <td class="px-6 py-4">
              <span class="px-3 py-1.5 rounded-full text-sm font-semibold bg-yellow-100 text-yellow-800">
                En cours
              </span>
            </td>
            <td class="px-6 py-4">
