<div class="min-h-screen bg-olak-gray py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Page Header -->
    <div class="mb-8 flex justify-between items-center">
      <div>
        <h1 class="text-4xl font-bold text-olak-primary-dark mb-2">Gestion des factures</h1>
        <p class="text-gray-600">Suivi et création des factures</p>
      </div>
      <%= link_to mockups_admin_invoice_create_path, class: "btn-primary flex items-center gap-2" do %>
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z"/>
        </svg>
        Créer une facture
      <% end %>
    </div>

    <!-- Filters Card -->
    <div class="card-olak mb-6">
      <h3 class="text-xl font-semibold text-olak-dark mb-4">Filtres</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <div>
          <label class="block text-sm font-semibold mb-2 text-olak-dark">Recherche</label>
          <input type="text" class="input-olak" placeholder="Nom propriétaire, numéro...">
        </div>
        
        <div>
          <label class="block text-sm font-semibold mb-2 text-olak-dark">Statut</label>
          <select class="input-olak">
            <option value="">Tous les statuts</option>
            <option value="paid">Payée</option>
            <option value="pending">En attente</option>
            <option value="overdue">En retard</option>
            <option value="cancelled">Annulée</option>
          </select>
        </div>
        
        <div>
          <label class="block text-sm font-semibold mb-2 text-olak-dark">Type</label>
          <select class="input-olak">
            <option value="">Tous les types</option>
            <option value="lease">Frais de bail</option>
            <option value="service">Prestation de service</option>
            <option value="manual">Facture manuelle</option>
          </select>
        </div>
        
        <div>
          <label class="block text-sm font-semibold mb-2 text-olak-dark">Période</label>
          <select class="input-olak">
            <option value="">Toute période</option>
            <option value="today">Aujourd'hui</option>
            <option value="week">Cette semaine</option>
            <option value="month">Ce mois</option>
            <option value="year">Cette année</option>
          </select>
        </div>
      </div>
      
      <div class="mt-4 flex gap-2">
        <button class="btn-primary px-4 py-2 text-sm">Appliquer les filtres</button>
        <button class="btn-secondary px-4 py-2 text-sm">Réinitialiser</button>
      </div>
    </div>

    <!-- Summary Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
      <div class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-olak-primary">
        <p class="text-sm text-gray-600">Total factures</p>
        <p class="text-2xl font-bold text-olak-dark">87</p>
      </div>
      <div class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-green-500">
        <p class="text-sm text-gray-600">Montant total</p>
        <p class="text-2xl font-bold text-olak-primary">261 000 €</p>
      </div>
      <div class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-orange-500">
        <p class="text-sm text-gray-600">En attente</p>
        <p class="text-2xl font-bold text-orange-600">12 factures</p>
      </div>
      <div class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-blue-500">
        <p class="text-sm text-gray-600">Ce mois</p>
        <p class="text-2xl font-bold text-olak-dark">18 200 €</p>
      </div>
    </div>

