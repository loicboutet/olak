<% content_for :title, "Propriétaire - Jean Dupont - OLAK Admin" %>

<div class="space-y-6">
  <!-- Breadcrumb -->
  <nav class="flex mb-6" aria-label="Breadcrumb">
    <ol class="flex items-center space-x-2 text-sm">
      <li>
        <%= link_to mockups_admin_dashboard_path, class: "text-gray-500 hover:text-purple-700" do %>
          Tableau de bord
        <% end %>
      </li>
      <li><span class="text-gray-400">/</span></li>
      <li>
        <%= link_to mockups_admin_owners_list_path, class: "text-gray-500 hover:text-purple-700" do %>
          Propriétaires
        <% end %>
      </li>
      <li><span class="text-gray-400">/</span></li>
      <li><span class="text-purple-700 font-semibold">Jean Dupont</span></li>
    </ol>
  </nav>

  <!-- Page Header -->
  <div class="flex justify-between items-start">
    <div>
      <h1 class="text-3xl font-bold text-olak-primary-dark">Jean Dupont</h1>
      <p class="text-gray-600 mt-2">Propriétaire - Profil et documents</p>
    </div>
    <div class="flex gap-3">
      <%= link_to mockups_admin_owner_edit_path, class: "bg-white text-purple-700 px-5 py-2.5 rounded-lg font-semibold border-2 border-purple-700 transition-all duration-300 hover:bg-purple-700 hover:text-white" do %>
        <svg class="w-4 h-4 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        Modifier
      <% end %>
      <%= link_to mockups_admin_owners_list_path, class: "bg-gray-100 text-gray-700 px-5 py-2.5 rounded-lg font-semibold hover:bg-gray-200 transition-colors" do %>
        Retour
      <% end %>
    </div>
  </div>

  <!-- Status Alert (if pending) -->
  <div class="bg-yellow-50 border-l-4 border-yellow-500 p-4 rounded-r-lg">
    <div class="flex items-center">
      <svg class="w-6 h-6 text-yellow-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
      </svg>
      <div>
        <p class="font-semibold text-yellow-800">Validation en attente</p>
        <p class="text-sm text-yellow-700 mt-1">Ce compte propriétaire nécessite une validation manuelle avant activation.</p>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content (Left Column) -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Personal Information -->
      <div class="bg-white rounded-xl p-6 shadow-md">
        <div class="flex justify-between items-center mb-6">
          <h2 class="text-xl font-bold text-olak-primary-dark">Informations Personnelles</h2>
          <span class="px-3 py-1.5 rounded-full text-sm font-semibold bg-yellow-100 text-yellow-800">
            En attente
          </span>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <p class="text-sm font-semibold text-gray-500 mb-1">Prénom</p>
            <p class="text-base text-gray-900">Jean</p>
          </div>
          <div>
            <p class="text-sm font-semibold text-gray-500 mb-1">Nom</p>
            <p class="text-base text-gray-900">Dupont</p>
          </div>
          <div>
            <p class="text-sm font-semibold text-gray-500 mb-1">Email</p>
            <p class="text-base text-gray-900">jean.dupont@example.fr</p>
          </div>
          <div>
            <p class="text-sm font-semibold text-gray-500 mb-1">Téléphone</p>
            <p class="text-base text-gray-900">06 12 34 56 78</p>
          </div>
          <div class="md:col-span-2">
            <p class="text-sm font-semibold text-gray-500 mb-1">Adresse</p>
            <p class="text-base text-gray-900">123 Rue de la Paix, 75002 Paris, France</p>
          </div>
          <div>
            <p class="text-sm font-semibold text-gray-500 mb-1">Type de propriétaire</p>
            <p class="text-base text-gray-900">Personne physique</p>
          </div>
          <div>
            <p class="text-sm font-semibold text-gray-500 mb-1">Date d'inscription</p>
            <p class="text-base text-gray-900">15 Janvier 2024</p>
          </div>
        </div>
      </div>

      <!-- Documents -->
      <div class="bg-white rounded-xl p-6 shadow-md">
        <h2 class="text-xl font-bold text-olak-primary-dark mb-6">Documents</h2>
        
        <div class="space-y-4">
          <!-- Document Item -->
          <div class="flex items-center justify-between p-4 border-2 border-gray-200 rounded-lg hover:border-purple-300 transition-colors">
            <div class="flex items-center">
              <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div>
                <p class="font-semibold text-gray-900">Pièce d'identité</p>
                <p class="text-sm text-gray-500">carte_identite.pdf • 245 KB</p>
              </div>
            </div>
            <div class="flex gap-2">
              <button class="px-4 py-2 text-sm font-semibold text-purple-700 bg-purple-100 rounded-lg hover:bg-purple-200 transition-colors">
                Voir
              </button>
              <button class="px-4 py-2 text-sm font-semibold text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200 transition-colors">
                Télécharger
              </button>
            </div>
          </div>

          <div class="flex items-center justify-between p-4 border-2 border-gray-200 rounded-lg hover:border-purple-300 transition-colors">
            <div class="flex items-center">
              <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div>
                <p class="font-semibold text-gray-900">Justificatif de domicile</p>
                <p class="text-sm text-gray-500">justificatif_domicile.pdf • 180 KB</p>
              </div>
            </div>
            <div class="flex gap-2">
              <button class="px-4 py-2 text-sm font-semibold text-purple-700 bg-purple-100 rounded-lg hover:bg-purple-200 transition-colors">
                Voir
              </button>
              <button class="px-4 py-2 text-sm font-semibold text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200 transition-colors">
                Télécharger
              </button>
            </div>
          </div>

          <div class="flex items-center justify-between p-4 border-2 border-gray-200 rounded-lg hover:border-purple-300 transition-colors">
            <div class="flex items-center">
              <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div>
                <p class="font-semibold text-gray-900">Titre de propriété</p>
                <p class="text-sm text-gray-500">titre_propriete.pdf • 520 KB</p>
              </div>
            </div>
            <div class="flex gap-2">
              <button class="px-4 py-2 text-sm font-semibold text-purple-700 bg-purple-100 rounded-lg hover:bg-purple-200 transition-colors">
                Voir
              </button>
              <button class="px-4 py-2 text-sm font-semibold text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200 transition-colors">
                Télécharger
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Properties -->
      <div class="bg-white rounded-xl p-6 shadow-md">
        <h2 class="text-xl font-bold text-olak-primary-dark mb-6">Biens Immobiliers (3)</h2>
        
        <div class="space-y-4">
          <div class="p-4 border-2 border-gray-200 rounded-lg hover:border-purple-300 transition-colors">
            <div class="flex justify-between items-start mb-3">
              <div>
                <h3 class="font-bold text-lg text-gray-900">Appartement T3</h3>
                <p class="text-sm text-gray-600">45 Avenue des Champs-Élysées, 75008 Paris</p>
              </div>
              <span class="px-3 py-1 rounded-full text-sm font-semibold bg-green-100 text-green-800">
                Actif
              </span>
            </div>
            <div class="grid grid-cols-3 gap-4 text-sm">
              <div>
                <p class="text-gray-500">Surface</p>
                <p class="font-semibold text-gray-900">65 m²</p>
              </div>
              <div>
                <p class="text-gray-500">Loyer</p>
                <p class="font-semibold text-gray-900">1 200 €/mois</p>
              </div>
              <div>
                <p class="text-gray-500">Type</p>
                <p class="font-semibold text-gray-900">Meublé</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Validation Sidebar (Right Column) -->
    <div class="space-y-6">
      <!-- Validation Form -->
      <div class="bg-white rounded-xl p-6 shadow-md">
        <h2 class="text-xl font-bold text-olak-primary-dark mb-6">Validation du compte</h2>
        
        <form class="space-y-4">
          <div>
            <label class="block text-sm font-semibold mb-2 text-olak-dark">
              Commentaire (optionnel)
            </label>
            <textarea rows="4" class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg text-base transition-all duration-300 focus:outline-none focus:border-purple-600 focus:ring-4 focus:ring-purple-600/10" placeholder="Ajoutez un commentaire..."></textarea>
          </div>

          <div class="flex flex-col gap-3">
            <%= link_to "#", method: :patch, class: "w-full bg-green-600 text-white px-6 py-3 rounded-lg font-semibold transition-all duration-300 hover:bg-green-700 hover:shadow-lg text-center" do %>
              <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              Valider le compte
            <% end %>

            <button type="button" class="w-full bg-red-600 text-white px-6 py-3 rounded-lg font-semibold transition-all duration-300 hover:bg-red-700 hover:shadow-lg">
              <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
              Refuser le compte
            </button>
          </div>
        </form>
      </div>

      <!-- Activity Log -->
      <div class="bg-white rounded-xl p-6 shadow-md">
        <h2 class="text-xl font-bold text-olak-primary-dark mb-6">Activité récente</h2>
        
        <div class="space-y-4">
          <div class="flex gap-3">
            <div class="w-2 h-2 bg-purple-600 rounded-full mt-2"></div>
            <div>
              <p class="text-sm font-semibold text-gray-900">Compte créé</p>
              <p class="text-xs text-gray-500">15 janvier 2024 à 14:32</p>
            </div>
          </div>
          <div class="flex gap-3">
            <div class="w-2 h-2 bg-gray-300 rounded-full mt-2"></div>
            <div>
              <p class="text-sm font-semibold text-gray-900">Documents uploadés</p>
              <p class="text-xs text-gray-500">15 janvier 2024 à 14:35</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>