<% content_for :title, "Gestion des Propriétaires - OLAK Admin" %>

<div class="space-y-6">
  <!-- Page Header -->
  <div class="flex justify-between items-center">
    <div>
      <h1 class="text-3xl font-bold text-olak-primary-dark">Gestion des Propriétaires</h1>
      <p class="text-gray-600 mt-2">Gérez les comptes propriétaires et leurs validations</p>
    </div>
    <%= link_to mockups_admin_owner_create_path, class: "bg-purple-600 text-white px-6 py-3 rounded-lg font-semibold transition-all duration-300 hover:bg-purple-700 hover:-translate-y-0.5 hover:shadow-lg" do %>
      <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
      </svg>
      Créer un propriétaire
    <% end %>
  </div>

  <!-- Filter Tabs -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="flex flex-wrap gap-2 mb-6">
      <button class="px-4 py-2 rounded-lg font-semibold bg-purple-600 text-white transition-colors">
        Tous (127)
      </button>
      <button class="px-4 py-2 rounded-lg font-semibold text-gray-700 bg-gray-100 hover:bg-purple-50 hover:text-purple-700 transition-colors">
        En attente (42)
      </button>
      <button class="px-4 py-2 rounded-lg font-semibold text-gray-700 bg-gray-100 hover:bg-purple-50 hover:text-purple-700 transition-colors">
        Validés (78)
      </button>
      <button class="px-4 py-2 rounded-lg font-semibold text-gray-700 bg-gray-100 hover:bg-purple-50 hover:text-purple-700 transition-colors">
        Refusés (7)
      </button>
    </div>

    <!-- Search Bar -->
    <div class="relative">
      <svg class="absolute left-4 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
      </svg>
      <input type="text" placeholder="Rechercher par nom, email ou téléphone..." class="w-full pl-12 pr-4 py-3 border-2 border-gray-200 rounded-lg text-base transition-all duration-300 focus:outline-none focus:border-purple-600 focus:ring-4 focus:ring-purple-600/10">
    </div>
  </div>

  <!-- Owners Table -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-purple-50">
          <tr>
            <th class="px-6 py-4 text-left text-xs font-semibold text-purple-900 uppercase tracking-wider">
              Propriétaire
            </th>
            <th class="px-6 py-4 text-left text-xs font-semibold text-purple-900 uppercase tracking-wider">
              Contact
            </th>
            <th class="px-6 py-4 text-left text-xs font-semibold text-purple-900 uppercase tracking-wider">
              Biens
            </th>
            <th class="px-6 py-4 text-left text-xs font-semibold text-purple-900 uppercase tracking-wider">
              Statut
            </th>
            <th class="px-6 py-4 text-left text-xs font-semibold text-purple-900 uppercase tracking-wider">
              Inscription
            </th>
            <th class="px-6 py-4 text-right text-xs font-semibold text-purple-900 uppercase tracking-wider">
              Actions
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <!-- Pending Owner -->
          <tr class="hover:bg-purple-50 transition-colors">
            <td class="px-6 py-4">
              <div class="flex items-center">
                <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center mr-3">
                  <span class="text-purple-700 font-semibold text-sm">JD</span>
                </div>
                <div>
                  <p class="font-semibold text-gray-900">Jean Dupont</p>
                  <p class="text-sm text-gray-500">Personne physique</p>
                </div>
              </div>
            </td>
            <td class="px-6 py-4">
              <p class="text-sm text-gray-900">jean.dupont@example.fr</p>
              <p class="text-sm text-gray-500">06 12 34 56 78</p>
            </td>
            <td class="px-6 py-4">
              <span class="text-sm font-semibold text-gray-900">3 biens</span>
            </td>
            <td class="px-6 py-4">
              <span class="px-3 py-1.5 rounded-full text-sm font-semibold bg-yellow-100 text-yellow-800">
                En attente
              </span>
            </td>
            <td class="px-6 py-4 text-sm text-gray-500">
              15 Jan 2024
            </td>
            <td class="px-6 py-4 text-right space-x-2">
              <%= link_to mockups_admin_owner_detail_path, class: "inline-flex items-center px-3 py-1.5 text-sm font-semibold text-purple-700 bg-purple-100 rounded-lg hover:bg-purple-200 transition-colors" do %>
                Voir
              <% end %>
              <%= link_to "#", method: :patch, class: "inline-flex items-center px-3 py-1.5 text-sm font-semibold text-green-700 bg-green-100 rounded-lg hover:bg-green-200 transition-colors" do %>
                Valider
              <% end %>
            </td>
          </tr>

          <!-- Validated Owner -->
          <tr class="hover:bg-purple-50 transition-colors">
            <td class="px-6 py-4">
              <div class="flex items-center">
                <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center mr-3">
                  <span class="text-purple-700 font-semibold text-sm">MM</span>
                </div>
                <div>
                  <p class="font-semibold text-gray-900">Marie Martin</p>
                  <p class="text-sm text-gray-500">Société (SARL)</p>
                </div>
              </div>
            </td>
            <td class="px-6 py-4">
              <p class="text-sm text-gray-900">marie.martin@immo.fr</p>
              <p class="text-sm text-gray-500">06 98 76 54 32</p>
            </td>
            <td class="px-6 py-4">
              <span class="text-sm font-semibold text-gray-900">8 biens</span>
            </td>
            <td class="px-6 py-4">
              <span class="px-3 py-1.5 rounded-full text-sm font-semibold bg-green-100 text-green-800">
                Validé
              </span>
            </td>
            <td class="px-6 py-4 text-sm text-gray-500">
              03 Déc 2023
            </td>
            <td class="px-6 py-4 text-right">
              <%= link_to mockups_admin_owner_detail_path, class: "inline-flex items-center px-3 py-1.5 text-sm font-semibold text-purple-700 bg-purple-100 rounded-lg hover:bg-purple-200 transition-colors" do %>
                Voir
              <% end %>
            </td>
          </tr>

          <!-- Pending Owner with Company -->
          <tr class="hover:bg-purple-50 transition-colors">
            <td class="px-6 py-4">
              <div class="flex items-center">
                <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center mr-3">
                  <span class="text-purple-700 font-semibold text-sm">PB</span>
                </div>
                <div>
                  <p class="font-semibold text-gray-900">Pierre Bernard</p>
                  <p class="text-sm text-gray-500">Personne physique</p>
                </div>
              </div>
            </td>
            <td class="px-6 py-4">
              <p class="text-sm text-gray-900">p.bernard@example.fr</p>
              <p class="text-sm text-gray-500">07 55 44 33 22</p>
            </td>
            <td class="px-6 py-4">
              <span class="text-sm font-semibold text-gray-900">1 bien</span>
            </td>
            <td class="px-6 py-4">
              <span class="px-3 py-1.5 rounded-full text-sm font-semibold bg-yellow-100 text-yellow-800">
                En attente
              </span>
            </td>
            <td class="px-6 py-4 text-sm text-gray-500">
              28 Jan 2024
            </td>
            <td class="px-6 py-4 text-right space-x-2">
              <%= link_to mockups_admin_owner_detail_path, class: "inline-flex items-center px-3 py-1.5 text-sm font-semibold text-purple-700 bg-purple-100 rounded-lg hover:bg-purple-200 transition-colors" do %>
                Voir
              <% end %>
              <%= link_to "#", method: :patch, class: "inline-flex items-center px-3 py-1.5 text-sm font-semibold text-green-700 bg-green-100 rounded-lg hover:bg-green-200 transition-colors" do %>
                Valider
              <% end %>
            </td>
          </tr>

          <!-- Rejected Owner -->
          <tr class="hover:bg-purple-50 transition-colors">
            <td class="px-6 py-4">
              <div class="flex items-center">
                <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center mr-3">
                  <span class="text-purple-700 font-semibold text-sm">SL</span>
                </div>
                <div>
                  <p class="font-semibold text-gray-900">Sophie Laurent</p>
                  <p class="text-sm text-gray-500">Personne physique</p>
                </div>
              </div>
            </td>
            <td class="px-6 py-4">
              <p class="text-sm text-gray-900">s.laurent@example.fr</p>
              <p class="text-sm text-gray-500">06 11 22 33 44</p>
            </td>
            <td class="px-6 py-4">
              <span class="text-sm font-semibold text-gray-900">0 bien</span>
            </td>
            <td class="px-6 py-4">
              <span class="px-3 py-1.5 rounded-full text-sm font-semibold bg-red-100 text-red-800">
                Refusé
              </span>
            </td>
            <td class="px-6 py-4 text-sm text-gray-500">
              10 Jan 2024
            </td>
            <td class="px-6 py-4 text-right">
              <%= link_to mockups_admin_owner_detail_path, class: "inline-flex items-center px-3 py-1.5 text-sm font-semibold text-purple-700 bg-purple-100 rounded-lg hover:bg-purple-200 transition-colors" do %>
                Voir
              <% end %>
            </td>
          </tr>

          <!-- Validated Owner -->
          <tr class="hover:bg-purple-50 transition-colors">
            <td class="px-6 py-4">
              <div class="flex items-center">
                <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center mr-3">
                  <span class="text-purple-700 font-semibold text-sm">AR</span>
                </div>
                <div>
                  <p class="font-semibold text-gray-900">Antoine Rousseau</p>
                  <p class="text-sm text-gray-500">Société (SCI)</p>
                </div>
              </div>
            </td>
            <td class="px-6 py-4">
              <p class="text-sm text-gray-900">a.rousseau@sci-example.fr</p>
              <p class="text-sm text-gray-500">06 77 88 99 00</p>
            </td>
            <td class="px-6 py-4">
              <span class="text-sm font-semibold text-gray-900">12 biens</span>
            </td>
            <td class="px-6 py-4">
              <span class="px-3 py-1.5 rounded-full text-sm font-semibold bg-green-100 text-green-800">
                Validé
              </span>
            </td>
            <td class="px-6 py-4 text-sm text-gray-500">
              20 Nov 2023
            </td>
            <td class="px-6 py-4 text-right">
              <%= link_to mockups_admin_owner_detail_path, class: "inline-flex items-center px-3 py-1.5 text-sm font-semibold text-purple-700 bg-purple-100 rounded-lg hover:bg-purple-200 transition-colors" do %>
                Voir
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <div class="px-6 py-4 border-t border-gray-200 flex items-center justify-between">
      <div class="text-sm text-gray-600">
        Affichage de <span class="font-semibold">1</span> à <span class="font-semibold">5</span> sur <span class="font-semibold">127</span> propriétaires
      </div>
      <div class="flex gap-2">
        <button class="px-4 py-2 text-sm font-semibold text-gray-400 bg-gray-100 rounded-lg cursor-not-allowed" disabled>
          Précédent
        </button>
        <button class="px-4 py-2 text-sm font-semibold text-white bg-purple-600 rounded-lg">
          1
        </button>
        <button class="px-4 py-2 text-sm font-semibold text-gray-700 bg-gray-100 rounded-lg hover:bg-purple-50 hover:text-purple-700 transition-colors">
          2
        </button>
        <button class="px-4 py-2 text-sm font-semibold text-gray-700 bg-gray-100 rounded-lg hover:bg-purple-50 hover:text-purple-700 transition-colors">
          3
        </button>
        <button class="px-4 py-2 text-sm font-semibold text-gray-700 bg-gray-100 rounded-lg hover:bg-purple-50 hover:text-purple-700 transition-colors">
          Suivant
        </button>
      </div>
    </div>
  </div>
</div>