<div class="min-h-screen bg-olak-gray py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Page Header -->
    <div class="mb-8">
      <h1 class="text-4xl font-bold text-olak-primary-dark mb-2">Tableau de bord des paiements</h1>
      <p class="text-gray-600">Vue d'ensemble financière et suivi des transactions</p>
    </div>

    <!-- Metric Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <div class="card-olak text-center">
        <svg class="w-12 h-12 mx-auto mb-3 text-olak-success" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
        </svg>
        <p class="font-bold text-3xl text-olak-dark mb-1">3 500 €</p>
        <p class="text-sm text-gray-600">Aujourd'hui</p>
      </div>

      <div class="card-olak text-center">
        <svg class="w-12 h-12 mx-auto mb-3 text-olak-primary" fill="currentColor" viewBox="0 0 20 20">
          <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z"/>
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z" clip-rule="evenodd"/>
        </svg>
        <p class="font-bold text-3xl text-olak-dark mb-1">45 000 €</p>
        <p class="text-sm text-gray-600">Ce mois</p>
      </div>

      <div class="card-olak text-center">
        <svg class="w-12 h-12 mx-auto mb-3 text-olak-accent" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M6 2a2 2 0 00-2 2v12a2 2 0 002 2h8a2 2 0 002-2V7.414A2 2 0 0015.414 6L12 2.586A2 2 0 0010.586 2H6zm5 6a1 1 0 10-2 0v3.586l-1.293-1.293a1 1 0 10-1.414 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L11 11.586V8z" clip-rule="evenodd"/>
        </svg>
        <p class="font-bold text-3xl text-olak-dark mb-1">380 000 €</p>
        <p class="text-sm text-gray-600">Cette année</p>
      </div>

      <div class="card-olak text-center">
        <svg class="w-12 h-12 mx-auto mb-3 text-olak-warning" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"/>
          <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd"/>
        </svg>
        <p class="font-bold text-3xl text-olak-dark mb-1">125</p>
        <p class="text-sm text-gray-600">Transactions totales</p>
      </div>
    </div>

    <!-- Charts Section -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
      <!-- Revenue Trend Chart -->
      <div class="card-olak">
        <h3 class="text-2xl font-semibold text-olak-dark mb-4">Évolution des revenus</h3>
        <div class="bg-olak-gray p-8 rounded-lg flex items-center justify-center" style="height: 300px;">
          <div class="text-center">
            <svg class="w-16 h-16 mx-auto mb-4 text-olak-primary" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z"/>
            </svg>
            <p class="text-gray-500 text-sm">[Graphique: Tendance mensuelle des revenus]</p>
          </div>
        </div>
      </div>

      <!-- Zone Distribution -->
      <div class="card-olak">
        <h3 class="text-2xl font-semibold text-olak-dark mb-4">Répartition par zone</h3>
        <div class="space-y-3">
          <div class="flex items-center justify-between p-3 bg-olak-primary-light rounded">
            <span class="font-medium text-olak-dark">Zone tendue - Paris</span>
            <span class="font-bold text-olak-primary">180 000 €</span>
          </div>
          <div class="flex items-center justify-between p-3 bg-olak-gray rounded">
            <span class="font-medium text-olak-dark">Zone tendue - Lyon</span>
            <span class="font-bold text-olak-primary">95 000 €</span>
          </div>
          <div class="flex items-center justify-between p-3 bg-olak-gray rounded">
            <span class="font-medium text-olak-dark">Zone tendue - Marseille</span>
            <span class="font-bold text-olak-primary">65 000 €</span>
          </div>
          <div class="flex items-center justify-between p-3 bg-olak-gray rounded">
            <span class="font-medium text-olak-dark">Hors zone tendue</span>
            <span class="font-bold text-olak-primary">40 000 €</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Payment Status Distribution -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="card-olak text-center">
        <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-green-100 mb-4">
          <svg class="w-8 h-8 text-green-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
        </div>
        <p class="font-bold text-2xl text-olak-dark mb-1">120</p>
        <p class="text-sm text-gray-600 mb-2">Paiements confirmés</p>
        <span class="badge badge-success">96%</span>
      </div>

      <div class="card-olak text-center">
        <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-orange-100 mb-4">
          <svg class="w-8 h-8 text-orange-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
          </svg>
        </div>
        <p class="font-bold text-2xl text-olak-dark mb-1">5</p>
        <p class="text-sm text-gray-600 mb-2">En attente</p>
        <span class="badge badge-pending">4%</span>
      </div>

      <div class="card-olak text-center">
        <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-red-100 mb-4">
          <svg class="w-8 h-8 text-red-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <p class="font-bold text-2xl text-olak-dark mb-1">0</p>
        <p class="text-sm text-gray-600 mb-2">Remboursés</p>
        <span class="badge badge-error">0%</span>
      </div>
    </div>

    <!-- Recent Payments Table -->
    <div class="card-olak">
      <div class="flex justify-between items-center mb-6">
        <h3 class="text-2xl font-semibold text-olak-dark">Paiements récents</h3>
        <%= link_to "Voir tout", mockups_admin_payments_list_path, class: "btn-secondary px-4 py-2 text-sm" %>
      </div>
      
      <div class="overflow-x-auto">
        <table class="min-w-full bg-white rounded-lg overflow-hidden">
          <thead class="bg-olak-primary-light text-olak-dark">
            <tr>
              <th class="px-6 py-4 text-left text-sm font-semibold">Date</th>
              <th class="px-6 py-4 text-left text-sm font-semibold">Propriétaire</th>
              <th class="px-6 py-4 text-left text-sm font-semibold">Bien</th>
              <th class="px-6 py-4 text-left text-sm font-semibold">Montant</th>
              <th class="px-6 py-4 text-left text-sm font-semibold">Zone</th>
              <th class="px-6 py-4 text-left text-sm font-semibold">Statut</th>
              <th class="px-6 py-4 text-left text-sm font-semibold">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <tr class="hover:bg-olak-gray transition-colors">
              <td class="px-6 py-4 text-sm text-olak-dark">18/11/2024</td>
              <td class="px-6 py-4 text-sm text-olak-dark">Jean Dupont</td>
              <td class="px-6 py-4 text-sm text-gray-600">45 Avenue des Champs-Élysées...</td>
              <td class="px-6 py-4 text-sm font-semibold text-olak-primary">1 500 €</td>
              <td class="px-6 py-4 text-sm"><span class="badge badge-zone-tendue">Paris</span></td>
              <td class="px-6 py-4"><span class="badge badge-success">Confirmé</span></td>
              <td class="px-6 py-4">
                <%= link_to "Voir", mockups_admin_payments_show_path, class: "text-olak-primary hover:text-olak-primary-dark text-sm font-semibold" %>
              </td>
            </tr>
            <tr class="hover:bg-olak-gray transition-colors">
              <td class="px-6 py-4 text-sm text-olak-dark">17/11/2024</td>
              <td class="px-6 py-4 text-sm text-olak-dark">Marie Martin</td>
              <td class="px-6 py-4 text-sm text-gray-600">12 Rue de la République...</td>
              <td class="px-6 py-4 text-sm font-semibold text-olak-primary">1 200 €</td>
              <td class="px-6 py-4 text-sm"><span class="badge badge-zone-tendue">Lyon</span></td>
              <td class="px-6 py-4"><span class="badge badge-pending">En attente</span></td>
              <td class="px-6 py-4">
                <%= link_to "Voir", mockups_admin_payments_show_path, class: "text-olak-primary hover:text-olak-primary-dark text-sm font-semibold" %>
              </td>
            </tr>
            <tr class="hover:bg-olak-gray transition-colors">
              <td class="px-6 py-4 text-sm text-olak-dark">16/11/2024</td>
              <td class="px-6 py-4 text-sm text-olak-dark">Pierre Bernard</td>
              <td class="px-6 py-4 text-sm text-gray-600">8 Boulevard de la Liberté...</td>
              <td class="px-6 py-4 text-sm font-semibold text-olak-primary">800 €</td>
              <td class="px-6 py-4 text-sm"><span class="badge badge-unfurnished">Marseille</span></td>
              <td class="px-6 py-4"><span class="badge badge-success">Confirmé</span></td>
              <td class="px-6 py-4">
                <%= link_to "Voir", mockups_admin_payments_show_path, class: "text-olak-primary hover:text-olak-primary-dark text-sm font-semibold" %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="mt-8 flex gap-4">
      <%= link_to mockups_admin_payments_export_path, class: "btn-primary flex items-center gap-2" do %>
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd"/>
        </svg>
        Exporter les données
      <% end %>
      <%= link_to mockups_admin_payments_list_path, class: "btn-secondary" do %>
        Voir tous les paiements
      <% end %>
    </div>

  </div>
</div>