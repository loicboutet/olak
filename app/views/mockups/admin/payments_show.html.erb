<div class="min-h-screen bg-olak-gray py-8">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Page Header -->
    <div class="mb-8">
      <h1 class="text-4xl font-bold text-olak-primary-dark mb-2">Détails du paiement</h1>
      <p class="text-gray-600">Paiement référence: <span class="font-mono font-semibold">PAY-001</span></p>
    </div>

    <!-- Payment Information Card -->
    <div class="card-olak mb-6">
      <div class="flex justify-between items-start mb-4">
        <h3 class="text-2xl font-semibold text-olak-dark">Informations du paiement</h3>
        <span class="badge badge-success">Confirmé</span>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <p class="text-sm text-gray-600 mb-1">Date et heure</p>
          <p class="text-lg font-semibold text-olak-dark">18 novembre 2024, 14:30</p>
        </div>
        <div>
          <p class="text-sm text-gray-600 mb-1">Montant</p>
          <p class="text-2xl font-bold text-olak-primary">1 500 €</p>
        </div>
        <div>
          <p class="text-sm text-gray-600 mb-1">Méthode de paiement</p>
          <p class="text-lg font-semibold text-olak-dark flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M4 4h16a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2m0 4v8h16V8H4m12 4h2v2h-2v-2z"/>
            </svg>
            Stripe
          </p>
        </div>
        <div>
          <p class="text-sm text-gray-600 mb-1">ID Transaction Stripe</p>
          <p class="text-sm font-mono text-gray-800">ch_3NqK72LkdIwHu7ix0dY3EuZ1</p>
        </div>
      </div>
    </div>

    <!-- Owner Information Card -->
    <div class="card-olak mb-6">
      <h3 class="text-2xl font-semibold text-olak-dark mb-4">Propriétaire</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <p class="text-sm text-gray-600 mb-1">Nom complet</p>
          <p class="text-lg font-semibold text-olak-dark">Jean Dupont</p>
        </div>
        <div>
          <p class="text-sm text-gray-600 mb-1">Email</p>
          <p class="text-lg text-olak-dark">jean.dupont@example.olak.fr</p>
        </div>
        <div>
          <p class="text-sm text-gray-600 mb-1">Téléphone</p>
          <p class="text-lg text-olak-dark">06 12 34 56 78</p>
        </div>
        <div>
          <p class="text-sm text-gray-600 mb-1">Actions</p>
          <%= link_to "Voir le profil", mockups_admin_owner_detail_path, class: "text-olak-primary hover:text-olak-primary-dark font-semibold" %>
        </div>
      </div>
    </div>

    <!-- Lease Information Card -->
    <div class="card-olak mb-6">
      <h3 class="text-2xl font-semibold text-olak-dark mb-4">Bail concerné</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="md:col-span-2">
          <p class="text-sm text-gray-600 mb-1">Adresse du bien</p>
          <p class="text-lg font-semibold text-olak-dark">45 Avenue des Champs-Élysées, 75008 Paris</p>
        </div>
        <div>
          <p class="text-sm text-gray-600 mb-1">Type de location</p>
          <span class="badge badge-furnished">Meublé</span>
        </div>
        <div>
          <p class="text-sm text-gray-600 mb-1">Zone</p>
          <span class="badge badge-zone-tendue">Zone tendue - Paris</span>
        </div>
    <!-- Transaction Details Card -->
    <div class="card-olak mb-6">
      <h3 class="text-2xl font-semibold text-olak-dark mb-4">Détails de la transaction</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <p class="text-sm text-gray-600 mb-1">Montant du bail</p>
          <p class="text-lg font-semibold text-olak-dark">1 500 €</p>
        </div>
        <div>
          <p class="text-sm text-gray-600 mb-1">Frais de traitement Stripe</p>
          <p class="text-lg font-semibold text-gray-600">45 € (3%)</p>
        </div>
        <div>
          <p class="text-sm text-gray-600 mb-1">Montant net</p>
          <p class="text-lg font-bold text-olak-primary">1 455 €</p>
        </div>
        <div>
          <p class="text-sm text-gray-600 mb-1">Date de versement</p>
          <p class="text-lg font-semibold text-olak-dark">20 novembre 2024</p>
        </div>
      </div>
    </div>

    <!-- Invoice Section -->
    <div class="card-olak mb-6">
      <h3 class="text-2xl font-semibold text-olak-dark mb-4">Facture</h3>
      <div class="flex items-center justify-between p-4 bg-olak-gray rounded-lg">
        <div class="flex items-center gap-3">
          <svg class="w-10 h-10 text-olak-primary" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"/>
          </svg>
          <div>
            <p class="font-semibold text-olak-dark">Facture #INV-2024-001</p>
            <p class="text-sm text-gray-600">Générée le 18/11/2024</p>
          </div>
        </div>
        <button class="btn-primary flex items-center gap-2">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd"/>
          </svg>
          Télécharger
        </button>
      </div>
    </div>

    <!-- Timeline/History -->
    <div class="card-olak mb-8">
      <h3 class="text-2xl font-semibold text-olak-dark mb-6">Historique de la transaction</h3>
      <div class="space-y-4">
        <div class="flex gap-4">
          <div class="flex-shrink-0 w-10 h-10 rounded-full bg-green-100 flex items-center justify-center">
            <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="flex-1">
            <p class="font-semibold text-olak-dark">Paiement confirmé</p>
            <p class="text-sm text-gray-600">18 novembre 2024, 14:32</p>
          </div>
        </div>

        <div class="flex gap-4">
          <div class="flex-shrink-0 w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center">
            <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z"/>
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="flex-1">
            <p class="font-semibold text-olak-dark">Paiement initié</p>
            <p class="text-sm text-gray-600">18 novembre 2024, 14:30</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="flex gap-4">
      <%= link_to mockups_admin_payments_list_path, class: "btn-secondary" do %>
        ← Retour à la liste
      <% end %>
      <%= link_to mockups_admin_payments_dashboard_path, class: "btn-secondary" do %>
        Tableau de bord
      <% end %>
    </div>

  </div>
</div>
      </div>
    </div>
