<div class="min-h-screen bg-olak-gray py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Page Header -->
    <div class="mb-8">
      <h1 class="text-4xl font-bold text-olak-primary-dark mb-2">Mes candidatures</h1>
      <p class="text-gray-600">Suivez l'état de vos candidatures pour différentes propriétés</p>
    </div>

    <!-- Applications Overview Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white rounded-lg shadow-md p-6 text-center">
        <svg class="w-12 h-12 mx-auto mb-3 text-olak-warning" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
        </svg>
        <p class="font-bold text-2xl text-olak-dark mb-1">3</p>
        <p class="text-sm text-gray-600">En attente</p>
      </div>
      
      <div class="bg-white rounded-lg shadow-md p-6 text-center">
        <svg class="w-12 h-12 mx-auto mb-3 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
          <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
        </svg>
        <p class="font-bold text-2xl text-olak-dark mb-1">2</p>
        <p class="text-sm text-gray-600">Proposées</p>
      </div>
      
      <div class="bg-white rounded-lg shadow-md p-6 text-center">
        <svg class="w-12 h-12 mx-auto mb-3 text-olak-success" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        <p class="font-bold text-2xl text-olak-dark mb-1">1</p>
        <p class="text-sm text-gray-600">Acceptées</p>
      </div>
      
      <div class="bg-white rounded-lg shadow-md p-6 text-center">
        <svg class="w-12 h-12 mx-auto mb-3 text-olak-error" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
        </svg>
        <p class="font-bold text-2xl text-olak-dark mb-1">1</p>
        <p class="text-sm text-gray-600">Refusées</p>
      </div>
    </div>

    <!-- Applications List -->
    <div class="space-y-6">
      
      <!-- Application 1 - En attente -->
      <div class="card-olak hover:shadow-lg transition-shadow">
        <div class="flex justify-between items-start mb-4">
          <div class="flex-1">
            <div class="flex items-center gap-3 mb-2">
              <h3 class="font-bold text-xl text-olak-primary-dark">Appartement T3 - Paris 15ème</h3>
              <span class="badge badge-pending">En attente</span>
            </div>
            <p class="text-sm text-gray-600 mb-2">75 m² • 2 chambres • Meublé</p>
            <p class="text-sm text-gray-600">
              <svg class="w-4 h-4 inline mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
              </svg>
              45 Avenue des Champs-Élysées, 75008 Paris
            </p>
          </div>
          <div class="text-right">
            <p class="font-bold text-2xl text-olak-primary mb-1">1 500 €/mois</p>
            <p class="text-sm text-gray-500">+ 150 € charges</p>
          </div>
        </div>

        <div class="bg-olak-gray p-4 rounded-lg mb-4">
          <div class="flex items-center mb-2">
            <svg class="w-5 h-5 text-olak-warning mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
            </svg>
            <p class="text-sm font-semibold text-olak-dark">Statut : En attente de notation par l'administrateur</p>
          </div>
          <p class="text-xs text-gray-600 ml-7">Candidature déposée le 15/11/2024</p>
        </div>

        <div class="flex gap-3">
          <%= link_to tenant_application_path(id: 1), class: "btn-primary flex-1" do %>
            <svg class="w-5 h-5 inline mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
              <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
            </svg>
            Voir les détails
          <% end %>
          <button class="btn-secondary flex-1">
            <svg class="w-5 h-5 inline mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
            </svg>
            Retirer ma candidature
          </button>
        </div>
      </div>

      <!-- Application 2 - Proposée au propriétaire -->
      <div class="card-olak hover:shadow-lg transition-shadow">
        <div class="flex justify-between items-start mb-4">
          <div class="flex-1">
            <div class="flex items-center gap-3 mb-2">
              <h3 class="font-bold text-xl text-olak-primary-dark">Maison T5 - Lyon 6ème</h3>
              <span class="badge badge-success" style="background-color: #3B82F6; color: white;">Proposée</span>
            </div>
            <p class="text-sm text-gray-600 mb-2">120 m² • 4 chambres • Nue</p>
            <p class="text-sm text-gray-600">
              <svg class="w-4 h-4 inline mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
              </svg>
              12 Rue de la République, 69006 Lyon
            </p>
          </div>
          <div class="text-right">
            <p class="font-bold text-2xl text-olak-primary mb-1">1 800 €/mois</p>
            <p class="text-sm text-gray-500">+ 100 € charges</p>
          </div>
        </div>

        <div class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded-r-lg mb-4">
          <div class="flex items-center">
            <svg class="w-6 h-6 text-blue-500 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
            </svg>
            <div>
              <p class="text-blue-800 font-semibold">Votre profil a été présenté au propriétaire</p>
              <p class="text-blue-700 text-sm mt-1">Note globale : 4.2/5 • En attente de décision</p>
            </div>
          </div>
        </div>

        <div class="flex gap-3">
          <%= link_to tenant_application_path(id: 2), class: "btn-primary w-full" do %>
            <svg class="w-5 h-5 inline mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
              <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
            </svg>
            Voir les détails et ma notation
          <% end %>
        </div>
      </div>

      <!-- Application 3 - Acceptée -->
      <div class="card-olak hover:shadow-lg transition-shadow border-2 border-olak-success">
        <div class="flex justify-between items-start mb-4">
          <div class="flex-1">
            <div class="flex items-center gap-3 mb-2">
              <h3 class="font-bold text-xl text-olak-primary-dark">Studio - Marseille 2ème</h3>
              <span class="badge badge-success">Acceptée</span>
            </div>
            <p class="text-sm text-gray-600 mb-2">30 m² • Meublé</p>
            <p class="text-sm text-gray-600">
              <svg class="w-4 h-4 inline mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
              </svg>
              28 Rue Paradis, 13002 Marseille
            </p>
          </div>
          <div class="text-right">
            <p class="font-bold text-2xl text-olak-primary mb-1">850 €/mois</p>
            <p class="text-sm text-gray-500">+ 50 € charges</p>
          </div>
        </div>

        <div class="bg-green-50 border-l-4 border-green-500 p-4 rounded-r-lg mb-4">
          <div class="flex items-center">
            <svg class="w-6 h-6 text-green-500 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <div>
              <p class="text-green-800 font-semibold">Félicitations ! Le propriétaire a accepté votre candidature</p>
              <p class="text-green-700 text-sm mt-1">Prochaine étape : Signature du bail • Acceptée le 18/11/2024</p>
            </div>
          </div>
        </div>

        <div class="flex gap-3">
          <%= link_to tenant_application_path(id: 3), class: "btn-primary w-full" do %>
            <svg class="w-5 h-5 inline mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"/>
              <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd"/>
            </svg>
            Voir le contrat de location
          <% end %>
        </div>
      </div>

      <!-- Application 4 - Refusée -->
      <div class="card-olak hover:shadow-lg transition-shadow opacity-75">
        <div class="flex justify-between items-start mb-4">
          <div class="flex-1">
            <div class="flex items-center gap-3 mb-2">
              <h3 class="font-bold text-xl text-olak-primary-dark">Appartement T2 - Bordeaux</h3>
              <span class="badge badge-error">Refusée</span>
            </div>
            <p class="text-sm text-gray-600 mb-2">50 m² • 1 chambre • Meublé</p>
            <p class="text-sm text-gray-600">
              <svg class="w-4 h-4 inline mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
              </svg>
              15 Cours de l'Intendance, 33000 Bordeaux
            </p>
          </div>
          <div class="text-right">
            <p class="font-bold text-2xl text-gray-500 mb-1">1 200 €/mois</p>
            <p class="text-sm text-gray-400">+ 80 € charges</p>
          </div>
        </div>

        <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded-r-lg mb-4">
          <div class="flex items-center">
            <svg class="w-6 h-6 text-red-500 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
            <div>
              <p class="text-red-800 font-semibold">Le propriétaire a refusé votre candidature</p>
              <p class="text-red-700 text-sm mt-1">Refusée le 10/11/2024</p>
            </div>
          </div>
        </div>

        <div class="flex gap-3">
          <%= link_to tenant_application_path(id: 4), class: "btn-secondary w-full" do %>
            <svg class="w-5 h-5 inline mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
              <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
            </svg>
            Voir les détails
          <% end %>
        </div>
      </div>

    </div>

    <!-- Empty State (Hidden when there are applications) -->
    <div class="hidden card-olak text-center" style="display: none;">
      <svg class="w-24 h-24 mx-auto mb-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
      </svg>
      <h3 class="text-xl font-semibold text-gray-600 mb-2">Aucune candidature pour le moment</h3>
      <p class="text-gray-500 mb-6">Vous n'avez pas encore déposé de candidature pour une propriété</p>
      <button class="btn-primary">
        <svg class="w-5 h-5 inline mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"/>
        </svg>
        Rechercher des biens
      </button>
    </div>

  </div>
</div>