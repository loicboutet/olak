<% content_for :title, "Mon Profil" %>

<!-- Page Header -->
<div class="mb-8">
  <div class="flex justify-between items-center">
    <div>
      <h1 class="text-4xl font-bold text-olak-primary-dark mb-2">Mon Profil</h1>
      <p class="text-gray-600">Gérez vos informations personnelles et documents</p>
    </div>
    <%= link_to edit_tenant_profile_path, class: "btn-primary flex items-center gap-2" do %>
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
        <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"/>
      </svg>
      Modifier mon profil
    <% end %>
  </div>
</div>

<!-- Document Status Alert -->
<div class="mb-6">
  <div class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded-r-lg">
    <div class="flex items-center">
      <svg class="w-6 h-6 text-blue-500 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
      </svg>
      <div>
        <p class="text-blue-800 font-semibold">Dossier en cours de validation</p>
        <p class="text-blue-700 text-sm mt-1">Vos documents sont en cours d'examen par l'administration.</p>
      </div>
    </div>
  </div>
</div>

<!-- Profile Information Card -->
<div class="card-olak mb-6">
  <div class="flex justify-between items-start mb-6">
    <h2 class="text-2xl font-semibold text-olak-primary-dark">Informations personnelles</h2>
    <span class="badge badge-success">Complet</span>
  </div>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <p class="text-sm font-semibold text-gray-600 mb-1">Nom complet</p>
      <p class="text-base text-olak-dark">Marie Martin</p>
    </div>
    
    <div>
      <p class="text-sm font-semibold text-gray-600 mb-1">Email</p>
      <p class="text-base text-olak-dark">marie.martin@example.fr</p>
    </div>
    
    <div>
      <p class="text-sm font-semibold text-gray-600 mb-1">Téléphone</p>
      <p class="text-base text-olak-dark">06 98 76 54 32</p>
    </div>
    
    <div>
      <p class="text-sm font-semibold text-gray-600 mb-1">Date de naissance</p>
      <p class="text-base text-olak-dark">22/08/1992</p>
    </div>
    
    <div class="md:col-span-2">
      <p class="text-sm font-semibold text-gray-600 mb-1">Adresse actuelle</p>
      <p class="text-base text-olak-dark">45 Avenue de la République, 94200 Ivry-sur-Seine, France</p>
    </div>
    
    <div>
      <p class="text-sm font-semibold text-gray-600 mb-1">Compte créé le</p>
      <p class="text-base text-olak-dark">5 novembre 2024</p>
    </div>
  </div>
</div>

<!-- Employment Information Card -->
<div class="card-olak mb-6">
  <div class="flex justify-between items-start mb-6">
    <h2 class="text-2xl font-semibold text-olak-primary-dark">Informations professionnelles</h2>
    <span class="badge badge-success">Validé</span>
  </div>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <p class="text-sm font-semibold text-gray-600 mb-1">Statut professionnel</p>
      <p class="text-base text-olak-dark">CDI - Temps plein</p>
    </div>
    
    <div>
      <p class="text-sm font-semibold text-gray-600 mb-1">Salaire mensuel net</p>
      <p class="text-base font-semibold text-green-600">2 500 €</p>
    </div>
    
    <div>
      <p class="text-sm font-semibold text-gray-600 mb-1">Employeur</p>
      <p class="text-base text-olak-dark">TechCorp SARL</p>
    </div>
    
    <div>
      <p class="text-sm font-semibold text-gray-600 mb-1">Poste occupé</p>
      <p class="text-base text-olak-dark">Développeuse Web</p>
    </div>
    
    <div>
      <p class="text-sm font-semibold text-gray-600 mb-1">Date d'embauche</p>
      <p class="text-base text-olak-dark">15 janvier 2022</p>
    </div>
    
    <div>
      <p class="text-sm font-semibold text-gray-600 mb-1">Ancienneté</p>
      <p class="text-base text-olak-dark">2 ans 10 mois</p>
    </div>
  </div>
</div>

<!-- Documents Status Card -->
<div class="card-olak mb-6">
