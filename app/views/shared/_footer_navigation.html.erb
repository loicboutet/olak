<!-- Shared Footer Navigation -->
<footer class="bg-white border-t border-gray-200 pt-12 -mb-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 pb-8">
      <!-- Logo and Description -->
      <div>
        <%= image_tag 'logo_olak.png', alt: 'OLAK', class: 'h-12 mb-4' %>
        <p class="text-gray-600 text-sm leading-relaxed">
          La gestion locative simplifiée et sécurisée pour propriétaires et locataires.
        </p>
      </div>
      
      <!-- Navigation Links -->
      <div>
        <h4 class="font-bold text-lg mb-4 text-olak-primary-dark">Navigation</h4>
        <ul class="space-y-2 text-sm">
          <li><%= link_to 'Accueil', root_path, class: 'text-gray-600 hover:text-olak-primary transition-colors' %></li>
          <li><%= link_to 'À propos', about_path, class: 'text-gray-600 hover:text-olak-primary transition-colors' %></li>
          <li><%= link_to 'Contact', contact_path, class: 'text-gray-600 hover:text-olak-primary transition-colors' %></li>
          <li><%= link_to '- Links', links_path, class: 'text-gray-600 hover:text-olak-primary transition-colors' %></li>
          <li><%= link_to '- Design System', typography_path, class: 'text-gray-600 hover:text-olak-primary transition-colors' %></li>
          <li><%= link_to '- Design System 2', typography2_path, class: 'text-gray-600 hover:text-olak-primary transition-colors' %></li>
        </ul>
      </div>
      
      <!-- Contact Information -->
      <div>
        <h4 class="font-bold text-lg mb-4 text-olak-primary-dark">Contact</h4>
        <p class="text-gray-600 text-sm">
          Email: <a href="mailto:contact@olak.fr" class="text-olak-primary hover:text-olak-primary-dark transition-colors">contact@olak.fr</a>
        </p>
      </div>
    </div>
  </div>
</footer>