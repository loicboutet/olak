<% content_for :title, "Détails de la notation - Admin OLAK" %>

<div class="max-w-4xl mx-auto px-4 py-8">
  <!-- Breadcrumb -->
  <nav class="mb-6" aria-label="Breadcrumb">
    <ol class="flex items-center space-x-2 text-sm">
      <li><%= link_to "Admin", admin_root_path, class: "text-gray-500 hover:text-olak-primary transition-colors" %></li>
      <li><span class="text-gray-400">/</span></li>
      <li><%= link_to "Notations", admin_applications_path, class: "text-gray-500 hover:text-olak-primary transition-colors" %></li>
      <li><span class="text-gray-400">/</span></li>
      <li><span class="text-olak-primary font-semibold">#12345</span></li>
    </ol>
  </nav>

  <!-- Page Title & Actions -->
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-4xl font-bold text-olak-primary-dark">Détails de la notation</h1>
      <p class="text-gray-600 mt-2">Candidature #12345</p>
    </div>
    <div class="flex gap-3">
      <%= link_to edit_admin_rating_path(id: 1), class: "btn-secondary" do %>
        <svg class="w-5 h-5 inline mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"/>
        </svg>
        Modifier
      <% end %>
    </div>
  </div>

  <!-- Status & Metadata -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
    <div class="card-olak">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600 mb-1">Statut</p>
          <span class="badge badge-success">Proposée au propriétaire</span>
        </div>
      </div>
    </div>
    <div class="card-olak">
      <div class="flex items-center justify-between text-sm">
        <div>
          <p class="text-gray-600 mb-1">Créée le</p>
          <p class="font-semibold text-olak-dark">15/11/2024</p>
        </div>
        <div class="text-right">
          <p class="text-gray-600 mb-1">Par</p>
          <p class="font-semibold text-olak-dark">Jean Admin</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Candidate Info Card -->
  <div class="card-olak mb-6">
    <div class="flex justify-between items-start mb-4">
      <h2 class="text-2xl font-semibold text-olak-dark">Informations du candidat</h2>
      <span class="badge badge-success">Documents validés</span>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <p class="text-sm text-gray-600 mb-1">Nom complet</p>
        <p class="font-semibold text-olak-dark">Marie Dupont</p>
      </div>
      <div>
        <p class="text-sm text-gray-600 mb-1">Email</p>
        <p class="font-semibold text-olak-dark">marie.dupont@example.olak.fr</p>
      </div>
      <div>
        <p class="text-sm text-gray-600 mb-1">Téléphone</p>
        <p class="font-semibold text-olak-dark">06 98 76 54 32</p>
      </div>
      <div>
        <p class="text-sm text-gray-600 mb-1">Statut professionnel</p>
        <p class="font-semibold text-olak-dark">CDI</p>
      </div>
      <div>
        <p class="text-sm text-gray-600 mb-1">Salaire mensuel net</p>
        <p class="font-semibold text-olak-primary">2 800 €</p>
      </div>
      <div>
        <p class="text-sm text-gray-600 mb-1">Type de garantie</p>
        <p class="font-semibold text-olak-dark">Garantie Visale</p>
      </div>
      <div>
        <p class="text-sm text-gray-600 mb-1">Localisation</p>
        <p class="font-semibold text-olak-dark">Paris 15ème</p>
      </div>
      <div>
        <p class="text-sm text-gray-600 mb-1">Adresse</p>
        <p class="font-semibold text-olak-dark">45 Avenue des Champs-Élysées</p>
      </div>
      <div>
        <p class="text-sm text-gray-600 mb-1">Loyer mensuel</p>
        <p class="font-semibold text-olak-primary">1 200 € + 150 € charges</p>
      </div>
    </div>
  </div>

  <!-- Rating Display -->
  <div class="card-olak">
    <h2 class="text-2xl font-semibold text-olak-dark mb-6">Évaluation multidimensionnelle</h2>
    
    <div class="space-y-4">
      <!-- Salary/Rent Ratio -->
      <div class="flex items-center justify-between pb-3 border-b border-gray-200">
        <span class="text-sm font-medium text-olak-dark">Ratio Salaire/Loyer</span>
        <div class="flex items-center gap-1">
          <% 5.times do |i| %>
            <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
          <% end %>
          <span class="ml-2 text-sm font-semibold text-olak-dark">5/5</span>
        </div>
      </div>

      <!-- Contract Type -->
      <div class="flex items-center justify-between pb-3 border-b border-gray-200">
        <span class="text-sm font-medium text-olak-dark">Type de contrat</span>
        <div class="flex items-center gap-1">
          <% 5.times do |i| %>
            <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
          <% end %>
          <span class="ml-2 text-sm font-semibold text-olak-dark">5/5</span>
        </div>
      </div>

      <!-- Guarantors -->
      <div class="flex items-center justify-between pb-3 border-b border-gray-200">
        <span class="text-sm font-medium text-olak-dark">Garanties</span>
        <div class="flex items-center gap-1">
          <% 4.times do |i| %>
            <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
          <% end %>
          <svg class="w-5 h-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
          <span class="ml-2 text-sm font-semibold text-olak-dark">4/5</span>
        </div>
      </div>

      <!-- Contract Duration -->
      <div class="flex items-center justify-between pb-3 border-b border-gray-200">
        <span class="text-sm font-medium text-olak-dark">Durée de location souhaitée</span>
        <div class="flex items-center gap-1">
          <% 4.times do |i| %>
            <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
          <% end %>
          <svg class="w-5 h-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
          <span class="ml-2 text-sm font-semibold text-olak-dark">4/5</span>
        </div>
      </div>

      <!-- Agent Feeling -->
      <div class="flex items-center justify-between pb-3">
        <span class="text-sm font-medium text-olak-dark">Ressenti de l'agent</span>
        <div class="flex items-center gap-1">
          <% 4.times do |i| %>
            <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
          <% end %>
          <svg class="w-5 h-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
          <span class="ml-2 text-sm font-semibold text-olak-dark">4/5</span>
        </div>
      </div>

      <!-- Overall Score -->
      <div class="border-t pt-6 mt-6">
        <div class="bg-olak-primary-light bg-opacity-20 p-6 rounded-lg">
          <div class="flex items-center justify-between">
            <span class="text-xl font-bold text-olak-dark">Note globale</span>
            <span class="text-4xl font-bold text-olak-primary">4.4/5</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Notes -->
  <div class="card-olak mt-6">
    <h3 class="text-xl font-semibold text-olak-dark mb-3">Notes et commentaires</h3>
    <div class="bg-olak-gray p-4 rounded-lg">
      <p class="text-olak-dark">Excellent candidat, profil très solide avec CDI et garantie Visale. Motivé pour une location longue durée.</p>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="flex gap-3 mt-8">
    <%= link_to admin_applications_path, class: "btn-secondary" do %>
      <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      Retour aux candidatures
    <% end %>
    <%= link_to edit_admin_rating_path(id: 1), class: "btn-primary" do %>
      <svg class="w-5 h-5 inline mr-2" fill="currentColor" viewBox="0 0 20 20">
        <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"/>
      </svg>
      Modifier la notation
    <% end %>
  </div>
</div>