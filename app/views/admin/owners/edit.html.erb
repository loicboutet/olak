<% content_for :title, "Modifier le propriétaire - Jean Dupont - OLAK Admin" %>

<div class="space-y-6">
  <!-- Breadcrumb -->
  <nav class="flex mb-6" aria-label="Breadcrumb">
    <ol class="flex items-center space-x-2 text-sm">
      <li>
        <%= link_to admin_root_path, class: "text-gray-500 hover:text-purple-700" do %>
          Tableau de bord
        <% end %>
      </li>
      <li><span class="text-gray-400">/</span></li>
      <li>
        <%= link_to admin_owners_path, class: "text-gray-500 hover:text-purple-700" do %>
          Propriétaires
        <% end %>
      </li>
      <li><span class="text-gray-400">/</span></li>
      <li>
        <%= link_to admin_owner_path(1), class: "text-gray-500 hover:text-purple-700" do %>
          Jean Dupont
        <% end %>
      </li>
      <li><span class="text-gray-400">/</span></li>
      <li><span class="text-purple-700 font-semibold">Modifier</span></li>
    </ol>
  </nav>

  <!-- Page Header -->
  <div>
    <h1 class="text-3xl font-bold text-olak-primary-dark">Modifier le propriétaire</h1>
    <p class="text-gray-600 mt-2">Jean Dupont - jean.dupont@example.fr</p>
  </div>

  <!-- Warning Alert -->
  <div class="bg-orange-50 border-l-4 border-orange-500 p-4 rounded-r-lg">
    <div class="flex items-center">
      <svg class="w-6 h-6 text-orange-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
      </svg>
      <div>
        <p class="font-semibold text-orange-800">Attention : Toute modification nécessitera une re-validation</p>
        <p class="text-sm text-orange-700 mt-1">Si le compte est validé, il passera en statut "En attente" après modification.</p>
      </div>
    </div>
  </div>

  <form class="space-y-6">
    <!-- Personal Information Section -->
    <div class="bg-white rounded-xl p-6 shadow-md">
      <h2 class="text-xl font-bold text-olak-primary-dark mb-6 pb-4 border-b-2 border-purple-100">
        <svg class="w-6 h-6 inline-block mr-2 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
        </svg>
        Informations Personnelles
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label class="block text-sm font-semibold mb-2 text-olak-dark">
            Prénom <span class="text-red-600">*</span>
          </label>
          <input type="text" name="first_name" value="Jean" required class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg text-base transition-all duration-300 focus:outline-none focus:border-purple-600 focus:ring-4 focus:ring-purple-600/10">
        </div>

        <div>
          <label class="block text-sm font-semibold mb-2 text-olak-dark">
            Nom <span class="text-red-600">*</span>
          </label>
          <input type="text" name="last_name" value="Dupont" required class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg text-base transition-all duration-300 focus:outline-none focus:border-purple-600 focus:ring-4 focus:ring-purple-600/10">
        </div>

        <div>
          <label class="block text-sm font-semibold mb-2 text-olak-dark">
            Email <span class="text-red-600">*</span>
          </label>
          <input type="email" name="email" value="jean.dupont@example.fr" required class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg text-base transition-all duration-300 focus:outline-none focus:border-purple-600 focus:ring-4 focus:ring-purple-600/10">
        </div>

        <div>
          <label class="block text-sm font-semibold mb-2 text-olak-dark">
            Téléphone <span class="text-red-600">*</span>
          </label>
          <input type="tel" name="phone" value="06 12 34 56 78" required class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg text-base transition-all duration-300 focus:outline-none focus:border-purple-600 focus:ring-4 focus:ring-purple-600/10">
        </div>

        <div class="md:col-span-2">
          <label class="block text-sm font-semibold mb-2 text-olak-dark">
            Adresse <span class="text-red-600">*</span>
          </label>
          <input type="text" name="address" value="123 Rue de la Paix" required class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg text-base transition-all duration-300 focus:outline-none focus:border-purple-600 focus:ring-4 focus:ring-purple-600/10">
        </div>

        <div>
          <label class="block text-sm font-semibold mb-2 text-olak-dark">
            Code postal <span class="text-red-600">*</span>
          </label>
          <input type="text" name="postal_code" value="75002" required class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg text-base transition-all duration-300 focus:outline-none focus:border-purple-600 focus:ring-4 focus:ring-purple-600/10">
        </div>

        <div>
          <label class="block text-sm font-semibold mb-2 text-olak-dark">
            Ville <span class="text-red-600">*</span>
          </label>
          <input type="text" name="city" value="Paris" required class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg text-base transition-all duration-300 focus:outline-none focus:border-purple-600 focus:ring-4 focus:ring-purple-600/10">
        </div>
      </div>
    </div>

    <!-- Company Information Section -->
    <div class="bg-white rounded-xl p-6 shadow-md">
      <h2 class="text-xl font-bold text-olak-primary-dark mb-6 pb-4 border-b-2 border-purple-100">
        <svg class="w-6 h-6 inline-block mr-2 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a1 1 0 110 2h-3a1 1 0 01-1-1v-2a1 1 0 00-1-1H9a1 1 0 00-1 1v2a1 1 0 01-1 1H4a1 1 0 110-2V4zm3 1h2v2H7V5zm2 4H7v2h2V9zm2-4h2v2h-2V5zm2 4h-2v2h2V9z" clip-rule="evenodd"/>
        </svg>
        Informations Société (Optionnel)
      </h2>

      <div class="mb-6">
        <label class="flex items-center cursor-pointer">
          <input type="checkbox" id="has_company" class="w-5 h-5 mr-3 accent-purple-600 rounded cursor-pointer">
          <span class="text-sm font-semibold text-olak-dark">Ce propriétaire représente une société</span>
        </label>
      </div>

      <div id="company_fields" class="grid grid-cols-1 md:grid-cols-2 gap-6 opacity-50">
        <div>
          <label class="block text-sm font-semibold mb-2 text-olak-dark">
            Nom de la société
          </label>
          <input type="text" name="company_name" class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg text-base transition-all duration-300 focus:outline-none focus:border-purple-600 focus:ring-4 focus:ring-purple-600/10" disabled>
        </div>

        <div>
          <label class="block text-sm font-semibold mb-2 text-olak-dark">
            SIRET
          </label>
          <input type="text" name="siret" class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg text-base transition-all duration-300 focus:outline-none focus:border-purple-600 focus:ring-4 focus:ring-purple-600/10" disabled>
        </div>

        <div class="md:col-span-2">
          <label class="block text-sm font-semibold mb-2 text-olak-dark">
            Adresse du siège social
          </label>
          <input type="text" name="company_address" class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg text-base transition-all duration-300 focus:outline-none focus:border-purple-600 focus:ring-4 focus:ring-purple-600/10" disabled>
        </div>
      </div>
    </div>

    <!-- Document Management Section -->
    <div class="bg-white rounded-xl p-6 shadow-md">
      <h2 class="text-xl font-bold text-olak-primary-dark mb-6 pb-4 border-b-2 border-purple-100">
        <svg class="w-6 h-6 inline-block mr-2 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"/>
        </svg>
        Documents
      </h2>

      <div class="space-y-4">
        <!-- Existing Document -->
        <div>
          <label class="block text-sm font-semibold mb-2 text-olak-dark">
            Pièce d'identité
          </label>
          <div class="flex items-center justify-between p-4 border-2 border-gray-200 rounded-lg">
            <div class="flex items-center">
              <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center mr-3">
                <svg class="w-5 h-5 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div>
                <p class="font-semibold text-gray-900">carte_identite.pdf</p>
                <p class="text-sm text-gray-500">245 KB</p>
              </div>
            </div>
            <button type="button" class="px-4 py-2 text-sm font-semibold text-purple-700 bg-purple-100 rounded-lg hover:bg-purple-200 transition-colors">
              Remplacer
            </button>
          </div>
        </div>

        <div>
          <label class="block text-sm font-semibold mb-2 text-olak-dark">
            Justificatif de domicile
          </label>
          <div class="flex items-center justify-between p-4 border-2 border-gray-200 rounded-lg">
            <div class="flex items-center">
              <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center mr-3">
                <svg class="w-5 h-5 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div>
                <p class="font-semibold text-gray-900">justificatif_domicile.pdf</p>
                <p class="text-sm text-gray-500">180 KB</p>
              </div>
            </div>
            <button type="button" class="px-4 py-2 text-sm font-semibold text-purple-700 bg-purple-100 rounded-lg hover:bg-purple-200 transition-colors">
              Remplacer
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="flex justify-between items-center">
      <%= link_to admin_owner_path(1), class: "bg-gray-100 text-gray-700 px-6 py-3 rounded-lg font-semibold hover:bg-gray-200 transition-colors" do %>
        Annuler
      <% end %>
      
      <button type="submit" class="bg-purple-600 text-white px-6 py-3 rounded-lg font-semibold transition-all duration-300 hover:bg-purple-700 hover:-translate-y-0.5 hover:shadow-lg">
        Mettre à jour
      </button>
    </div>
  </form>
</div>